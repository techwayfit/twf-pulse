@using TechWayFit.Pulse.Web.Models

<div class="row g-3">
    @foreach (var card in Cards)
    {
        <div class="@GetColumnClass()">
            <div class="stat-card stat-card-@card.Variant">
                <div class="d-flex align-items-center gap-2 gap-md-3">
                    <div class="stat-card-icon flex-shrink-0">
                        <i class="@card.Icon text-white fs-4"></i>
                    </div>
                    <div class="flex-grow-1 text-center text-md-start">
                        <div class="stat-card-value h3 mb-0 fw-bold lh-1">@card.Value</div>
                        <small class="stat-card-label text-muted fw-semibold">@card.Label</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public List<StatCardData> Cards { get; set; } = new();

    private string GetColumnClass()
    {
        return Cards.Count switch
        {
            2 => "col-6",
            3 => "col-12 col-md-4",
            4 => "col-6 col-lg-3",
            _ => "col-12 col-md-6 col-lg-4"
        };
    }
}
