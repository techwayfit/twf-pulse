@page "/facilitator/live"
@using TechWayFit.Pulse.Web.Services
@using TechWayFit.Pulse.Contracts.Responses
@using TechWayFit.Pulse.Contracts.Enums
@using Microsoft.Extensions.Logging
@using System.Net.Http
@using Microsoft.AspNetCore.SignalR.Client
@using TechWayFit.Pulse.Web.Hubs
@using TechWayFit.Pulse.Web.Components.Dashboards
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject IPulseApiService ApiService
@inject IHttpClientFactory HttpClientFactory
@inject IClientTokenService TokenService
@inject ILogger<Live> Logger
@rendermode InteractiveServer
@implements IAsyncDisposable

<main class="py-5">
    <!-- Constrained Container -->
    <div class="container" style="max-width: 1200px;">
@if (isLoading)
{
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted mb-0">Loading session...</p>
                </div>
            </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="alert alert-danger mb-4" role="alert">
                        @errorMessage
                    </div>
                    <a href="/" class="btn btn-primary pulse-btn-primary">Back to Home</a>
                </div>
            </div>
}
else if (session != null)
{
            <!-- Header - Mobile Optimized -->
            <div class="mb-3">
                <!-- Desktop Layout -->
                <div class="d-none d-md-flex justify-content-between align-items-center">
                    <div>
                        <h2 class="mb-0 h4">@session.Title</h2>
                        <div class="text-muted small mt-1">
                            Code: <span class="badge bg-primary bg-opacity-10 text-primary">@sessionCode</span>
                            <span class="mx-2">TTL: <strong>4h</strong></span>
                        </div>
                    </div>
                    <div class="d-flex gap-2 align-items-center">
                        @if (session.Status == SessionStatus.Live)
                        {
                            <span class="badge bg-success-subtle text-success px-3 py-2">LIVE</span>
                        }
                        <button class="btn btn-sm btn-outline-primary" @onclick="ShowQRModal">
                            <i class="fas fa-qrcode me-1"></i>Show Joining Information
                        </button>
                        @if (session.Status == SessionStatus.Live)
                        {
                            <button class="btn btn-sm btn-danger" @onclick="EndSession" disabled="@isPerformingAction">
                                End Session
                            </button>
                        }
                        else if (session.Status == SessionStatus.Draft)
                        {
                            <button class="btn btn-sm btn-success" @onclick="StartSession" disabled="@isPerformingAction">
                                Start Session
                            </button>
                        }
                    </div>
                </div>
                
                <!-- Mobile Layout -->
                <div class="d-md-none">
                    <!-- Line 1: Title + LIVE indicator -->
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h2 class="mb-0 h5 flex-grow-1">@session.Title</h2>
                        @if (session.Status == SessionStatus.Live)
                        {
                            <span class="badge bg-success text-white px-2 py-1">LIVE</span>
                        }
                    </div>
                    <!-- Line 2: Code + TTL -->
                    <div class="small text-muted mb-2">
                        Code: <span class="badge bg-primary bg-opacity-10 text-primary">@sessionCode</span>
                        <span class="ms-2">TTL: <strong>4h</strong></span>
                    </div>
                    <!-- Line 3: Buttons -->
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary flex-grow-1" @onclick="ShowQRModal">
                            <i class="fas fa-qrcode me-1"></i>Join Info
                        </button>
                        @if (session.Status == SessionStatus.Live)
                        {
                            <button class="btn btn-sm btn-danger" @onclick="EndSession" disabled="@isPerformingAction">
                                End Session
                            </button>
                        }
                        else if (session.Status == SessionStatus.Draft)
                        {
                            <button class="btn btn-sm btn-success" @onclick="StartSession" disabled="@isPerformingAction">
                                Start Session
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Session Information -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body p-3">
                    <h6 class="fw-semibold mb-3">Session Information</h6>
                    
                    <div class="row g-3">
                        <div class="col-6 col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-users text-primary"></i>
                                <div class="d-flex align-items-baseline gap-1">
                                    <span class="h5 mb-0 text-primary">@participantCount</span>
                                    <small class="text-muted">Participants</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-tasks text-info"></i>
                                <div class="d-flex align-items-baseline gap-1">
                                    <span class="h5 mb-0 text-info">@activities.Count</span>
                                    <small class="text-muted">Activities</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-play-circle text-success"></i>
                                <div class="d-flex align-items-baseline gap-1">
                                    <span class="h5 mb-0 text-success">@activities.Count(a => a.Status == Contracts.Enums.ActivityStatus.Open)</span>
                                    <small class="text-muted">Active</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-check-circle text-secondary"></i>
                                <div class="d-flex align-items-baseline gap-1">
                                    <span class="h5 mb-0 text-secondary">@activities.Count(a => a.Status == Contracts.Enums.ActivityStatus.Closed)</span>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Joining Information Modal -->
            <div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0 pb-0">
                            <h5 class="modal-title" id="qrModalLabel">Joining Information</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center px-4 pb-4">
                            <!-- QR Code -->
                            <div class="bg-white border rounded p-3 d-inline-block mb-3">
                                <canvas id="qr-modal-@(sessionCode.Replace("-", ""))"
                                        width="200"
                                        height="200"></canvas>
                            </div>
                            
                            <!-- Session Code -->
                            <div class="bg-primary bg-opacity-10 rounded px-3 py-2 mb-3">
                                <div class="h4 mb-0 text-primary fw-bold">@sessionCode</div>
                                <small class="text-muted">Session Code</small>
                            </div>
                            
                            <!-- Divider -->
                            <div class="text-muted small mb-2">or share this link</div>
                            
                            <!-- Join URL -->
                            <div class="input-group">
                                <input type="text" class="form-control" readonly value="@joinUrl" id="joinUrlInputModal" />
                                <button class="btn btn-primary" @onclick="CopyJoinUrl">
                                    Copy
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
             
                 
                  
