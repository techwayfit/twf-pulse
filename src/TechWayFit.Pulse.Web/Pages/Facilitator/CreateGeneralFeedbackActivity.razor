@page "/facilitator/activities/create-feedback"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@inject NavigationManager Navigation
@inject TechWayFit.Pulse.Web.Services.IPulseApiService ApiService
@inject TechWayFit.Pulse.Web.Services.IClientTokenService TokenService
@inject Microsoft.Extensions.Options.IOptions<TechWayFit.Pulse.Web.Configuration.ActivityDefaultsOptions> ActivityDefaults
@using TechWayFit.Pulse.Contracts.Requests
@using TechWayFit.Pulse.Contracts.Enums
@using System.Text.Json

<PageTitle>Create General Feedback Activity</PageTitle>

<div class="container mt-5 container-sm-custom">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">ðŸ’¬ Create General Feedback Activity</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    <strong>Error:</strong> @errorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">
                    <strong>Success:</strong> @successMessage
                    <div class="mt-3">
                        <button class="btn btn-primary" @onclick="GoToFacilitatorConsole">Go to Console</button>
                        <button class="btn btn-outline-secondary" @onclick="ResetForm">Create Another</button>
                    </div>
                </div>
            }
            else
            {
                <form @onsubmit="HandleSubmit">
                    <!-- Session Code -->
                    <div class="mb-3">
                        <label class="form-label">Session Code *</label>
                        <input type="text" class="form-control" @bind="sessionCode" placeholder="ABC-123" required readonly="@(!string.IsNullOrEmpty(Code))" />
                        <small class="text-muted">@(string.IsNullOrEmpty(Code) ? "Enter the session code for this activity" : "Session code from Live page")</small>
                    </div>

                    <!-- Activity Title -->
                    <div class="mb-3">
                        <label class="form-label">Activity Title *</label>
                        <input type="text" class="form-control" @bind="title" placeholder="Share your thoughts on the sprint" required />
                    </div>

                    <!-- Prompt (optional) -->
                    <div class="mb-3">
                        <label class="form-label">Prompt (optional)</label>
                        <textarea class="form-control" @bind="prompt" rows="3" placeholder="Please provide detailed feedback on what went well and what could be improved..."></textarea>
                    </div>

                    <!-- Feedback Configuration -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Feedback Settings</h5>
                        </div>
                        <div class="card-body">
                            <!-- Response Length -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Minimum Characters</label>
                                    <input type="number" class="form-control" @bind="minLength" min="0" max="5000" />
                                    <small class="text-muted">Minimum feedback length (0 = no limit)</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Maximum Characters</label>
                                    <input type="number" class="form-control" @bind="maxLength" min="10" max="10000" />
                                    <small class="text-muted">Maximum feedback length</small>
                                </div>
                            </div>

                            <!-- Placeholder -->
                            <div class="mb-3">
                                <label class="form-label">Placeholder Text</label>
                                <input type="text" class="form-control" @bind="placeholder" placeholder="Share your detailed feedback here..." />
                            </div>

                            <!-- Max Responses -->
                            <div class="mb-3">
                                <label class="form-label">Max Responses Per Participant</label>
                                <input type="number" class="form-control" @bind="maxResponsesPerParticipant" min="1" max="100" />
                                <small class="text-muted">How many times can each participant provide feedback</small>
                            </div>

                            <!-- Options -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="allowAnonymous" @bind="allowAnonymous" />
                                        <label class="form-check-label" for="allowAnonymous">
                                            Allow anonymous feedback
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="showResponses" @bind="showResponses" />
                                        <label class="form-check-label" for="showResponses">
                                            Show all responses to participants
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="enableCategories" @bind="enableCategories" />
                                        <label class="form-check-label" for="enableCategories">
                                            Enable AI-powered feedback categorization
                                        </label>
                                        <small class="form-text text-muted d-block">Automatically group similar feedback themes</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Categories (if enabled) -->
                            @if (enableCategories)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Suggested Categories (optional)</label>
                                    <input type="text" class="form-control" @bind="suggestedCategories" placeholder="Communication, Process, Tools, Collaboration" />
                                    <small class="text-muted">Comma-separated list of categories to suggest</small>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-outline-secondary" @onclick="GoBack">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Create Activity
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? Code { get; set; }

    private string sessionCode = string.Empty;
    private string title = string.Empty;
    private string prompt = string.Empty;
    private int maxResponsesPerParticipant = 5;
    private int minLength = 0;
    private int maxLength = 2000;
    private string placeholder = "Share your detailed feedback here...";
    private bool allowAnonymous = false;
    private bool showResponses = true;
    private bool enableCategories = true;
    private string suggestedCategories = string.Empty;

    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isSubmitting = false;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Code))
        {
            sessionCode = Code;
        
        // Set default from configuration
        maxResponsesPerParticipant = ActivityDefaults.Value.GeneralFeedback.MaxResponsesPerParticipant;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = string.Empty;

            // Prepare config
            var config = new
            {
                minLength,
                maxLength,
                placeholder,
                allowAnonymous,
                MaxResponsesPerParticipant = maxResponsesPerParticipant,
                showResponses,
                enableCategories,
                suggestedCategories
            };

            // Get next order number (TODO: Get from API)
            var order = 1; // Placeholder

            var request = new CreateActivityRequest
            (
                ActivityType.GeneralFeedback,
                order,
                title.Trim(),
                string.IsNullOrWhiteSpace(prompt) ? null : prompt.Trim(),
                JsonSerializer.Serialize(config)
            );

            // Get facilitator token from token service
            var token = await TokenService.GetFacilitatorTokenAsync(sessionCode);
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Authentication failed. Please try again.";
                return;
            }

            await ApiService.CreateActivityAsync(sessionCode, request, token);
            successMessage = "General feedback activity created successfully!";
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to create activity: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ResetForm()
    {
        title = string.Empty;
        prompt = string.Empty;
        minLength = 0;
        maxLength = 2000;
        placeholder = "Share your detailed feedback here...";
        allowAnonymous = false;
        showResponses = true;
        enableCategories = true;
        suggestedCategories = string.Empty;
        successMessage = string.Empty;
        errorMessage = string.Empty;
    }

    private void GoToFacilitatorConsole()
    {
        Navigation.NavigateTo($"/facilitator/live?code={sessionCode}");
    }

    private void GoBack()
    {
        if (!string.IsNullOrEmpty(sessionCode))
        {
            Navigation.NavigateTo($"/facilitator/live?code={sessionCode}");
        }
        else
        {
            Navigation.NavigateTo("/");
        }
    }
}
