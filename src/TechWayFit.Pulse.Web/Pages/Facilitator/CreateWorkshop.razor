@page "/facilitator/create-workshop"
@inject NavigationManager Navigation
@inject TechWayFit.Pulse.Web.Services.IPulseApiService ApiService
@inject TechWayFit.Pulse.Web.Services.IClientTokenService TokenService
@using TechWayFit.Pulse.Contracts.Responses
@using TechWayFit.Pulse.Web.Components.Facilitator


<main class="py-5" style="min-height: calc(100vh - 200px); margin-bottom: 2rem;">
    <div class="container" style="max-width: 1200px;">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
            <div>
                <h2 class="mb-2">AI-Powered Session Creator</h2>
                <p class="text-muted mb-0">Let AI generate your workshop activities based on your context and goals</p>
            </div>
            <div class="d-flex gap-2 align-items-center flex-wrap">
                <a href="/facilitator/create" class="btn btn-sm btn-outline-secondary">Create Manually</a>
                <span class="badge bg-white text-dark border px-3 py-2">TTL: <strong>6h</strong></span>
            </div>
        </div>

        <!-- Session Details & Join Form -->
        <div class="row g-4 mb-4">
            <!-- Session Details Card -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-semibold mb-3">1. Session Details</h5>
                        <p class="text-muted small mb-4">Provide basic information about your workshop</p>
                        
                        <div class="mb-3">
                            <label class="form-label fw-medium">Session title <span class="text-danger">*</span></label>
                            <input class="form-control" @bind="sessionTitle" placeholder="e.g., Sprint 24 Retrospective" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-medium">Goal <span class="text-danger">*</span></label>
                            <textarea class="form-control" rows="3" @bind="sessionGoal" placeholder="e.g., Identify bottlenecks and prioritize improvements"></textarea>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Workshop type</label>
                                <select class="form-select" @bind="workshopType">
                                    <option selected>Ops / Process Improvement</option>
                                    <option>Retro</option>
                                    <option>Discovery</option>
                                    <option>Incident Review</option>
                                    <option>Feedback</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Max contributions per participant</label>
                                <select class="form-select" @bind="maxContributions">
                                    <option>3</option>
                                    <option selected>5</option>
                                    <option>8</option>
                                    <option>10</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Join Form Card -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="card-title fw-semibold mb-1">2. Join Form</h5>
                                <p class="text-muted small mb-0">Configure up to 5 fields for filtering/clustering (optional)</p>
                            </div>
                            @if (joinFormFields.Count < 5)
                            {
                                <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddJoinFormField">
                                    + Add Field
                                </button>
                            }
                        </div>
                        
                        @if (joinFormFields.Any())
                        {
                            @foreach (var field in joinFormFields)
                            {
                                <div class="mb-3 p-3 border rounded bg-light">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <label class="form-label fw-medium mb-0">Field @(joinFormFields.IndexOf(field) + 1)</label>
                                        <button type="button" class="btn btn-sm btn-link text-danger p-0" @onclick="() => RemoveJoinFormField(field)">
                                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                            </svg>
                                        </button>
                                    </div>
                                    <div class="row g-2 mb-2">
                                        <div class="col-6">
                                            <input type="text" class="form-control form-control-sm" @bind="field.Label" placeholder="Field label (e.g., Team)" />
                                        </div>
                                        <div class="col-6">
                                            <select class="form-select form-select-sm" @bind="field.Type">
                                                <option value="text">Text</option>
                                                <option value="dropdown">Dropdown</option>
                                                <option value="checkbox">Checkbox</option>
                                            </select>
                                        </div>
                                    </div>
                                    @if (field.Type == "dropdown")
                                    {
                                        <div class="mt-2">
                                            <label class="form-label small mb-1">Dropdown Options (comma-separated)</label>
                                            <input type="text" class="form-control form-control-sm" @bind="field.Options" 
                                                   placeholder="e.g., Team A, Team B, Team C" />
                                            <small class="form-text text-muted">Separate options with commas</small>
                                        </div>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <p class="mb-2">No fields added yet</p>
                                <button type="button" class="btn btn-sm btn-primary" @onclick="AddJoinFormField">
                                    + Add First Field
                                </button>
                            </div>
                        }
                        
                        @if (joinFormFields.Any())
                        {
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted">
                                    <strong>@joinFormFields.Count</strong> of 5 fields used
                                    @if (joinFormFields.Count < 5)
                                    {
                                        <span> ‚Ä¢ @(5 - joinFormFields.Count) remaining</span>
                                    }
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Generation Section (Full Width) -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                <div class="mb-3">
                    <h5 class="card-title fw-semibold mb-2">3. Generate Activities with AI</h5>
                    <p class="text-muted small mb-0">Let AI create workshop activities tailored to your context</p>
                </div>
            
            <div class="mb-3">
                <div class="alert alert-info border-0 d-flex align-items-start" style="background-color: #cfe2ff;">
                    <svg class="me-2 mt-1" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                    </svg>
                    <div class="small">
                        <strong>Quick start:</strong> Fill in title and goal above, then click "Generate with AI" for instant activity suggestions. 
                        Or expand enhanced options below for more tailored results.
                    </div>
                </div>
            </div>
            
            <!-- Enhanced AI Generation Section -->
            <details open="@showAdvancedAI" class="mb-4">
                <summary class="btn btn-link p-0 text-decoration-none fw-semibold d-flex align-items-center" style="cursor:pointer; list-style: none;" @onclick="() => showAdvancedAI = !showAdvancedAI">
                    <svg width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16" style="transform: rotate(@(showAdvancedAI ? "90deg" : "0deg")); transition: transform 0.2s;">
                        <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    @(showAdvancedAI ? "Hide" : "Show") Enhanced Options
                </summary>
                
                <div class="mt-4 p-3 bg-white rounded border">
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Session Duration (minutes)</label>
                            <input type="number" class="form-control" @bind="aiDurationMinutes" min="15" max="600" placeholder="e.g., 60" />
                            <small class="form-text text-muted">15-600 minutes. AI will suggest appropriate activity count.</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-medium">Expected Participants</label>
                            <input type="number" class="form-control" @bind="aiParticipantCount" min="1" max="1000" placeholder="e.g., 12" />
                        </div>
                    </div>
                    
                    <!-- Participant Type -->
                    <div class="mb-3">
                        <label class="form-label fw-medium">Primary Audience</label>
                        <select class="form-select" @bind="aiParticipantType">
                            <option value="">-- Select --</option>
                            <option value="Technical">Technical (Engineers, DevOps, QA)</option>
                            <option value="Business">Business (Product, Sales, Marketing)</option>
                            <option value="Managers">Managers (Team Leads, Department Heads)</option>
                            <option value="Leaders">Leaders (Directors, VPs, Executives)</option>
                            <option value="Mixed">Mixed Audience</option>
                        </select>
                        <small class="form-text text-muted">AI will adjust terminology and focus based on audience type</small>
                    </div>
                    
                    <!-- Context Documents Expandable -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold d-block mb-2">Context Documents (Optional)</label>
                        <div class="alert alert-warning py-2 px-3 mb-3" style="font-size: 0.875rem;">
                            ‚ö†Ô∏è Do not include customer names, emails, or sensitive data
                        </div>
                        
                        <!-- Sprint Backlog -->
                        <div class="border rounded mb-3">
                            <button type="button" class="btn btn-light w-100 text-start d-flex align-items-center justify-content-between py-2 px-3" 
                                    data-bs-toggle="collapse" data-bs-target="#sprintBacklogCollapse">
                                <span>üìã Sprint Backlog</span>
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </button>
                            <div class="collapse" id="sprintBacklogCollapse">
                                <div class="p-3 border-top bg-light">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="enableSprintBacklog" @bind="enableSprintBacklog" />
                                        <label class="form-check-label fw-medium" for="enableSprintBacklog">Include Sprint Backlog Context</label>
                                    </div>
                                    @if (enableSprintBacklog)
                                    {
                                        <div class="mb-3">
                                            <label class="form-label fw-medium">Sprint Summary (max 500 chars)</label>
                                            <textarea class="form-control" rows="3" @bind="sprintBacklogSummary" maxlength="500" 
                                                      placeholder="E.g., Sprint 24. Payment Gateway Integration. 12/15 stories done. Stripe integration completed."></textarea>
                                            <small class="form-text text-muted">@(sprintBacklogSummary?.Length ?? 0)/500 chars</small>
                                        </div>
                                        
                                        <div class="mb-0">
                                            <label class="form-label fw-medium">Key Backlog Items (one per line)</label>
                                            <textarea class="form-control" rows="3" @bind="sprintBacklogItems" 
                                                      placeholder="E.g., JIRA-123: Implement rate limiting"></textarea>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- Incident Report -->
                        <div class="border rounded mb-3">
                            <button type="button" class="btn btn-light w-100 text-start d-flex align-items-center justify-content-between py-2 px-3" 
                                    data-bs-toggle="collapse" data-bs-target="#incidentReportCollapse">
                                <span>üö® Incident Report</span>
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </button>
                            <div class="collapse" id="incidentReportCollapse">
                                <div class="p-3 border-top bg-light">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="enableIncident" @bind="enableIncident" />
                                        <label class="form-check-label fw-medium" for="enableIncident">Include Incident Context</label>
                                    </div>
                                    @if (enableIncident)
                                    {
                                        <div class="mb-3">
                                            <label class="form-label fw-medium">Incident Summary (max 500 chars)</label>
                                            <textarea class="form-control" rows="3" @bind="incidentSummary" maxlength="500" 
                                                      placeholder="E.g., Payment service outage on Nov 15. Database connection pool exhausted."></textarea>
                                            <small class="form-text text-muted">@(incidentSummary?.Length ?? 0)/500 chars</small>
                                        </div>
                                        
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label fw-medium">Severity</label>
                                                <select class="form-select" @bind="incidentSeverity">
                                                    <option value="">-- Select --</option>
                                                    <option value="P0">P0 - Critical (Complete Outage)</option>
                                                    <option value="P1">P1 - High (Major Impact)</option>
                                                    <option value="P2">P2 - Medium (Significant Impact)</option>
                                                    <option value="P3">P3 - Low (Minor Impact)</option>
                                                    <option value="P4">P4 - Informational</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label fw-medium">Duration (minutes)</label>
                                                <input type="number" class="form-control" @bind="incidentDurationMinutes" placeholder="e.g., 120" />
                                            </div>
                                        </div>
                                        
                                        <div class="mb-0">
                                            <label class="form-label fw-medium">Impacted Systems (comma-separated)</label>
                                            <input class="form-control" @bind="incidentImpactedSystems" 
                                                   placeholder="E.g., Payment API, Database, Notification Service" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- Product Documentation -->
                        <div class="border rounded mb-3">
                            <button type="button" class="btn btn-light w-100 text-start d-flex align-items-center justify-content-between py-2 px-3" 
                                    data-bs-toggle="collapse" data-bs-target="#productDocsCollapse">
                                <span>üìñ Product Documentation</span>
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </button>
                            <div class="collapse" id="productDocsCollapse">
                                <div class="p-3 border-top bg-light">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="enableProductDocs" @bind="enableProductDocs" />
                                        <label class="form-check-label fw-medium" for="enableProductDocs">Include Product Context</label>
                                    </div>
                                    @if (enableProductDocs)
                                    {
                                        <div class="mb-3">
                                            <label class="form-label fw-medium">Product Summary (max 500 chars)</label>
                                            <textarea class="form-control" rows="3" @bind="productSummary" maxlength="500" 
                                                      placeholder="E.g., E-commerce platform for B2B sales. Focus on mobile checkout experience."></textarea>
                                            <small class="form-text text-muted">@(productSummary?.Length ?? 0)/500 chars</small>
                                        </div>
                                        
                                        <div class="mb-0">
                                            <label class="form-label fw-medium">Key Features (one per line)</label>
                                            <textarea class="form-control" rows="3" @bind="productFeatures" 
                                                      placeholder="E.g., One-click checkout, Bulk ordering"></textarea>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- AI Options -->
                    <div class="mb-3">
                        <label class="fw-semibold d-block mb-2">Temperature (Creativity)</label>
                        <input type="range" class="form-range" @bind="aiTemperature" min="0" max="1" step="0.1" />
                        <small class="text-muted">@aiTemperature.ToString("0.0") - Lower = more focused, Higher = more creative</small>
                    </div>
                </div>
            </details>
            
            <!-- Generate Button -->
            <div class="d-flex gap-3 align-items-center flex-wrap mt-4">
                <button class="btn btn-primary btn-lg px-5" @onclick="GenerateWithAI" disabled="@isGenerating">
                    @if (isGenerating)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Generating Activities...</span>
                    }
                    else
                    {
                        <span>Generate Activities with AI</span>
                    }
                </button>
                
                @if (!string.IsNullOrEmpty(lastGenerationInfo))
                {
                    <div class="@(lastGenerationInfo.StartsWith("‚úì") ? "text-success" : "text-danger") fw-semibold">
                        @lastGenerationInfo
                    </div>
                }
            </div>
            </div>
        </div>
        
        <!-- Generated Activities List -->
        @if (generatedActivities.Any())
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title fw-semibold mb-0">4. Review Generated Activities</h5>
                        <span class="badge bg-success">@generatedActivities.Count @(generatedActivities.Count == 1 ? "Activity" : "Activities")</span>
                    </div>
                    <p class="text-muted small mb-4">Review and customize the AI-generated activities. Click edit to modify or remove to delete.</p>
                
                <div class="list-group mb-4">
                    @for (int i = 0; i < generatedActivities.Count; i++)
                    {
                        var a = generatedActivities[i];
                        <div class="list-group-item border rounded mb-2">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1 me-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-primary me-2">@a.Order</span>
                                        <strong class="mb-0">@a.Title</strong>
                                        <span class="badge bg-secondary-subtle text-secondary ms-2">@a.Type</span>
                                        @if (a.DurationMinutes.HasValue)
                                        {
                                            <span class="text-muted small ms-2">‚è± @a.DurationMinutes min</span>
                                        }
                                    </div>
                                    <p class="text-muted mb-0 small">@a.Prompt</p>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(i)">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                        </svg>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveGeneratedActivity(i)">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>

                            @if (editingIndex == i)
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <div class="mb-2">
                                        <label class="form-label fw-semibold">Title</label>
                                        <input class="form-control" @bind="editModel.Title" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label fw-semibold">Prompt</label>
                                        <textarea class="form-control" rows="3" @bind="editModel.Prompt"></textarea>
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label fw-semibold">Duration (minutes)</label>
                                        <input type="number" class="form-control" @bind="editModel.DurationMinutes" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Config (JSON)</label>
                                        <textarea class="form-control font-monospace" rows="3" @bind="editModel.Config"></textarea>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-primary btn-sm" @onclick="SaveGeneratedEdit">Save</button>
                                        <button class="btn btn-secondary btn-sm" @onclick="CancelGeneratedEdit">Cancel</button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                
                <!-- Final Actions -->
                <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                    <div class="text-muted small">
                        <strong>@generatedActivities.Count</strong> @(generatedActivities.Count == 1 ? "activity" : "activities") ready to launch
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-secondary" href="/home">Cancel</a>
                        <button class="btn btn-success btn-lg px-5" @onclick="CreateAndSaveSession" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Saving Session...</span>
                            }
                            else
                            {
                                <span>Save & Go Live</span>
                            }
                        </button>
                    </div>
                </div>
                </div>
            </div>
        }
        
        <EditActivityModal @ref="editActivityModal"
                           OnDraftActivityUpdated="HandleDraftActivityUpdated"
                           OnDraftActivityDeleted="HandleDraftActivityDeleted" />
