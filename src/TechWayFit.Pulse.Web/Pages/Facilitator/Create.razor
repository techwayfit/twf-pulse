@page "/facilitator/create"
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>TechWayFit Pulse — Create Session</PageTitle>

<main class="wrap">
    <section class="card">
        <div class="title">
            <div>
                <h2 class="h2">Create session</h2>
                <div class="subtle">Context → Join Form (max 5 fields) → Activities → Launch</div>
            </div>
            <span class="chip">TTL: <strong>&nbsp;6h</strong></span>
        </div>

        <div class="card" style="box-shadow:none">
            <div class="card-body">
                <h3 class="h4 mb-3">Session context</h3>
                <div class="mb-3">
                    <label class="form-label">Session title</label>
                    <input class="form-control" @bind="sessionTitle" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Goal</label>
                    <textarea class="form-control" rows="3" @bind="sessionGoal"></textarea>
                </div>
                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Workshop type</label>
                        <select class="form-select" @bind="workshopType">
                            <option selected>Ops / Process Improvement</option>
                            <option>Retro</option>
                            <option>Discovery</option>
                            <option>Incident Review</option>
                            <option>Feedback</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Max contributions per participant (N)</label>
                        <select class="form-select" @bind="maxContributions">
                            <option>3</option>
                            <option selected>5</option>
                            <option>8</option>
                            <option>10</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a class="btn btn-primary" href="/facilitator/live">Save & Go Live</a>
                    <a class="btn btn-secondary" href="/home">Cancel</a>
                </div>
            </div>
        </div>

        <div class="sp"></div>
        
        <div class="card" style="box-shadow:none">
            <div class="card-body">
                <h3 class="h4 mb-2">Join form builder (max 5 fields)</h3>
                <p class="text-muted mb-4">Drag field types to build your join form. Configure up to 5 fields for filtering/clustering.</p>
                
                <div class="form-builder-container" id="joinFormBuilder">
                    <div class="field-types">
                        <!-- Field types will be rendered by JavaScript -->
                    </div>
                    <div class="form-drop-zone">
                        <!-- Drop zone will be rendered by JavaScript -->
                    </div>
                </div>

                <hr class="my-4" />
                <h3 class="h4 mb-3">Activities</h3>
                <div class="list-group">
                    <div class="list-group-item"><strong>1) Poll</strong><div class="text-muted small">Slowest step</div></div>
                    <div class="list-group-item"><strong>2) Word Cloud</strong><div class="text-muted small">Pain in one word</div></div>
                    <div class="list-group-item active"><strong>3) Quadrant</strong><div class="text-muted small">Impact vs Effort</div></div>
                    <div class="list-group-item"><strong>4) 5-Whys</strong><div class="text-muted small">Root cause ladder</div></div>
                </div>
            </div>
        </div>
    </section>
</main>

@code {
    private string sessionTitle = "Ops Pain Points Workshop — Group 1";
    private string sessionGoal = "Identify bottlenecks and quantify impact so we can prioritize fixes.";
    private string workshopType = "Ops / Process Improvement";
    private string maxContributions = "5";
    private List<FormField> joinFormFields = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Form builder auto-initializes via JavaScript
            // This is just a backup call
            try
            {
                await Task.Delay(200);
                await JS.InvokeVoidAsync("initFormBuilder", "joinFormBuilder");
            }
            catch
            {
                // Ignore - form builder will auto-init from script
            }
        }
    }

    private async Task SaveFormFields()
    {
        var fields = await JS.InvokeAsync<List<FormField>>("getFormBuilderFields");
        joinFormFields = fields ?? new();
    }

    public class FormField
    {
        public string Type { get; set; } = string.Empty;
        public string Label { get; set; } = string.Empty;
        public bool Required { get; set; }
        public List<string>? Options { get; set; }
    }
}
