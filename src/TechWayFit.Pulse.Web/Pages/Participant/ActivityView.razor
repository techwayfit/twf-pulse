@page "/participant/activity-view"
@inject NavigationManager Navigation

<PageTitle>TechWayFit Pulse — Activity</PageTitle>

<main class="wrap">
    <div class="center">
        <div class="card phone">
            <div class="title">
                <div>
                    <h2 class="h2">Live activity</h2>
                    <div class="subtle">Impact vs Effort</div>
                </div>
                <span class="chip"><span class="dot"></span> Open</span>
            </div>

            <div class="viz" style="margin-top:12px">
                <strong>Place your point</strong>
                <p class="p">Move sliders and submit (placeholder).</p>

                <div class="row2" style="margin-top:10px">
                    <div>
                        <label>Effort (1–5)</label>
                        <input class="field" type="range" min="1" max="5" @bind="effort" />
                    </div>
                    <div>
                        <label>Impact (1–5)</label>
                        <input class="field" type="range" min="1" max="5" @bind="impact" />
                    </div>
                </div>

                <div class="sp"></div>
                <label>Idea title (optional)</label>
                <input class="field" @bind="ideaTitle" placeholder="e.g., Reduce approval steps" />

                <div class="sp"></div>
                <a class="btn primary" style="width:100%; text-align:center" href="/participant/done-view">Submit</a>
            </div>

            <div class="viz" style="margin-top:12px; padding:12px">
                <strong>Note</strong>
                <div class="subtle">In the real app, this screen updates when facilitator moves to next activity.</div>
            </div>
        </div>
    </div>
</main>

@code {
    private int effort = 3;
    private int impact = 4;
    private string ideaTitle = "";
}
