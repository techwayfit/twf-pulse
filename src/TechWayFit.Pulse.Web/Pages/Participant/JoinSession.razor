@page "/participant/join-session"
@inject NavigationManager Navigation

<PageTitle>TechWayFit Pulse â€” Join</PageTitle>

<main class="wrap">
    <div class="center">
        <div class="card phone">
            <div class="title">
                <div>
                    <h2 class="h2">Join session</h2>
                    <div class="subtle">Join form (example)</div>
                </div>
                <span class="chip">TYF-4821</span>
            </div>

            <div class="form" style="margin-top:10px">
                <div>
                    <label>Display name (optional)</label>
                    <input class="field" @bind="displayName" placeholder="e.g., Alex" />
                </div>

                <div class="row2">
                    <div>
                        <label>Team</label>
                        <select class="field" @bind="team">
                            <option>Ops</option>
                            <option>Tech</option>
                            <option>Finance</option>
                            <option>Support</option>
                            <option>Leadership</option>
                        </select>
                    </div>
                    <div>
                        <label>Role</label>
                        <select class="field" @bind="role">
                            <option>Officer</option>
                            <option selected>Supervisor</option>
                            <option>Manager</option>
                            <option>Director</option>
                        </select>
                    </div>
                </div>

                <div class="row2">
                    <div>
                        <label>Location</label>
                        <select class="field" @bind="location">
                            <option selected>HQ</option>
                            <option>Branch</option>
                            <option>Remote</option>
                        </select>
                    </div>
                    <div>
                        <label>Anonymous</label>
                        <select class="field" @bind="anonymous">
                            <option selected>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                </div>

                <a class="btn primary" style="width:100%; text-align:center" href="/participant/activity-view">Join</a>
                <div class="subtle right">Max contributions (N) enforced server-side in real app.</div>
            </div>
        </div>
    </div>
</main>

@code {
    private string displayName = "";
    private string team = "Ops";
    private string role = "Supervisor";
    private string location = "HQ";
    private string anonymous = "Yes";
}
