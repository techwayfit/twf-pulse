{
  "name": "Town Hall / All-Hands",
  "description": "Company-wide engagement with Q&A and feedback",
  "category": "TeamBuilding",
  "iconEmoji": "üè¢",
  "config": {
    "title": "Company Town Hall / All-Hands Meeting",
    "goal": "Engage the entire organization and gather company-wide feedback",
    "context": "Quarterly or monthly all-hands meeting for company updates",
    "settings": {
      "durationMinutes": 60,
      "allowAnonymous": true,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": false
        },
        {
          "name": "department",
          "label": "Department",
          "type": "select",
          "required": false,
          "options": [
            "Engineering",
            "Product",
            "Sales",
            "Marketing",
            "Customer Success",
            "Operations",
            "Finance",
            "HR",
            "Other"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Company Culture",
        "prompt": "Describe our company culture in one word",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "Poll",
        "title": "Strategic Priority",
        "prompt": "What should be our top strategic priority this quarter?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "revenue-growth", "label": "Revenue growth", "description": null},
            {"id": "product-innovation", "label": "Product innovation", "description": null},
            {"id": "customer-satisfaction", "label": "Customer satisfaction", "description": null},
            {"id": "operational-efficiency", "label": "Operational efficiency", "description": null},
            {"id": "team-development", "label": "Team development", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other priority (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 3,
        "type": "QnA",
        "title": "Ask Leadership Anything",
        "prompt": "Submit your questions for the leadership team (anonymous option available)",
        "durationMinutes": 10
      },
      {
        "order": 4,
        "type": "GeneralFeedback",
        "title": "Ideas & Suggestions",
        "prompt": "Share your ideas for improving the company",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "product-innovation", "label": "Product/Innovation", "icon": "üí°"},
            {"id": "processes", "label": "Processes", "icon": "‚öôÔ∏è"},
            {"id": "culture-people", "label": "Culture/People", "icon": "ü§ù"},
            {"id": "customer-experience", "label": "Customer Experience", "icon": "üòä"},
            {"id": "tools-technology", "label": "Tools/Technology", "icon": "üíª"},
            {"id": "other", "label": "Other", "icon": "üìù"}
          ],
          "requireCategory": false,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Share your idea...",
          "allowAnonymous": true,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 5,
        "type": "Rating",
        "title": "Leadership Communication",
        "prompt": "How effective is leadership communication?",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Not Effective",
          "maxLabel": "5 - Very Effective",
          "midpointLabel": "3 - Moderately Effective",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "How can leadership communicate better?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 6,
        "type": "Poll",
        "title": "Employee Sentiment",
        "prompt": "How do you feel about the company's direction?",
        "durationMinutes": 3,
        "config": {
          "options": [
            {"id": "very-optimistic", "label": "Very optimistic", "description": null},
            {"id": "optimistic", "label": "Optimistic", "description": null},
            {"id": "neutral", "label": "Neutral", "description": null},
            {"id": "concerned", "label": "Concerned", "description": null},
            {"id": "very-concerned", "label": "Very concerned", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": false,
          "customOptionPlaceholder": "Other (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
