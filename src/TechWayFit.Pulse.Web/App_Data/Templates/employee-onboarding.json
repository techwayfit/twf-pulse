{
  "name": "Employee Onboarding",
  "description": "Interactive orientation for new hires",
  "category": "TeamBuilding",
  "iconEmoji": "üëã",
  "config": {
    "title": "Welcome New Team Members",
    "goal": "Help new employees learn about company culture and feel welcomed",
    "context": "Interactive orientation session for new hires",
    "settings": {
      "durationMinutes": 90,
      "allowAnonymous": false,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "department",
          "label": "Department",
          "type": "text",
          "required": true
        },
        {
          "name": "startDate",
          "label": "Start Date",
          "type": "text",
          "required": false
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "First Impressions",
        "prompt": "Describe your first impression of the company in one word",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "Poll",
        "title": "Learning Preference",
        "prompt": "How do you prefer to learn new things?",
        "durationMinutes": 3,
        "config": {
          "options": [
            {
              "id": "hands-on",
              "label": "Hands-on practice",
              "description": null
            },
            {
              "id": "reading",
              "label": "Reading documentation",
              "description": null
            },
            {
              "id": "demos",
              "label": "Watching demos",
              "description": null
            },
            {
              "id": "pair-programming",
              "label": "Pair programming",
              "description": null
            },
            {
              "id": "asking-questions",
              "label": "Asking questions",
              "description": null
            }
          ],
          "allowMultiple": true,
          "minSelections": 1,
          "maxSelections": 3,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other learning method (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 3,
        "type": "Quadrant",
        "title": "Skills Assessment",
        "prompt": "Plot your skills based on confidence and experience",
        "durationMinutes": 12,
        "config": {
          "xAxisLabel": "Experience Level",
          "yAxisLabel": "Confidence",
          "topLeftLabel": "High Confidence, Low Experience",
          "topRightLabel": "Expert (High Confidence & Experience)",
          "bottomLeftLabel": "Beginner (Learning)",
          "bottomRightLabel": "Experienced but Unsure"
        }
      },
      {
        "order": 4,
        "type": "GeneralFeedback",
        "title": "Questions & Expectations",
        "prompt": "What questions or expectations do you have?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {
              "id": "career-growth",
              "label": "Career Growth",
              "icon": "üìà"
            },
            {
              "id": "team-culture",
              "label": "Team Culture",
              "icon": "ü§ù"
            },
            {
              "id": "work-life-balance",
              "label": "Work-Life Balance",
              "icon": "‚öñÔ∏è"
            },
            {
              "id": "tools-tech",
              "label": "Tools & Technology",
              "icon": "üõ†Ô∏è"
            },
            {
              "id": "general",
              "label": "General Questions",
              "icon": "‚ùì"
            }
          ],
          "requireCategory": false,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Share your questions or expectations...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      }
    ]
  }
