{
  "name": "Product Discovery",
  "description": "Idea cloud + prioritization",
  "category": "ProductDiscovery",
  "iconEmoji": "ðŸ’¡",
  "config": {
    "title": "Product Discovery Session",
    "goal": "Generate and prioritize product ideas",
    "context": "Collaborative session for product ideation",
    "settings": {
      "durationMinutes": 120,
      "allowAnonymous": false,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Product Manager",
            "Designer",
            "Engineer",
            "Stakeholder",
            "User Researcher"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Customer Needs",
        "prompt": "What do our customers need most?",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "GeneralFeedback",
        "title": "Feature Ideas",
        "prompt": "Share your product ideas",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {
              "id": "new-feature",
              "label": "New Feature",
              "icon": "âœ¨"
            },
            {
              "id": "improvement",
              "label": "Improvement",
              "icon": "ðŸ”§"
            },
            {
              "id": "integration",
              "label": "Integration",
              "icon": "ðŸ”—"
            },
            {
              "id": "ux-enhancement",
              "label": "UX Enhancement",
              "icon": "ðŸŽ¨"
            }
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe your product idea...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 3,
        "type": "Quadrant",
        "title": "Value vs Complexity",
        "prompt": "Let's prioritize these ideas",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Implementation Complexity",
          "yAxisLabel": "User Value",
          "topLeftLabel": "High Value, Low Complexity (Do First)",
          "topRightLabel": "High Value, High Complexity (Plan)",
          "bottomLeftLabel": "Low Value, Low Complexity (Maybe)",
          "bottomRightLabel": "Low Value, High Complexity (Avoid)"
        }
      },
      {
        "order": 4,
        "type": "Poll",
        "title": "Top Priority Vote",
        "prompt": "Which idea should we build first?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {
              "id": "idea-1",
              "label": "Idea 1",
              "description": "To be filled during session"
            },
            {
              "id": "idea-2",
              "label": "Idea 2",
              "description": null
            },
            {
              "id": "idea-3",
              "label": "Idea 3",
              "description": null
            },
            {
              "id": "idea-4",
              "label": "Idea 4",
              "description": null
            },
            {
              "id": "idea-5",
              "label": "Idea 5",
              "description": null
            }
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other idea (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 5,
        "type": "GeneralFeedback",
        "title": "Next Steps",
        "prompt": "What are the action items?",
        "durationMinutes": 8,
        "config": {
          "categoriesEnabled": false,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Share your action item ideas...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      }
    ]
  }
}
