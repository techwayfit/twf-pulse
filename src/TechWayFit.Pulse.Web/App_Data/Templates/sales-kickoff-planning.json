{
  "name": "Sales Kickoff Planning",
  "description": "Territory planning with account prioritization",
  "category": "ProductDiscovery",
  "iconEmoji": "üìà",
  "config": {
    "title": "Sales Kickoff & Pipeline Planning",
    "goal": "Align sales team on strategy, territories, and quarterly targets",
    "context": "Quarterly or annual sales kickoff meeting",
    "settings": {
      "durationMinutes": 90,
      "allowAnonymous": false,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Account Executive",
            "Sales Development Rep",
            "Sales Manager",
            "Sales Engineer",
            "Customer Success"
          ]
        },
        {
          "name": "region",
          "label": "Region/Territory",
          "type": "text",
          "required": false
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Quarterly Motivation",
        "prompt": "What word describes your energy for this quarter?",
        "durationMinutes": 3
      },
      {
        "order": 2,
        "type": "Poll",
        "title": "Strategic Focus",
        "prompt": "What should be our primary sales focus this quarter?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "new-acquisition", "label": "New customer acquisition", "description": null},
            {"id": "expansion", "label": "Expansion in existing accounts", "description": null},
            {"id": "channel-partner", "label": "Channel/partner sales", "description": null},
            {"id": "cross-sell-upsell", "label": "Product cross-sell/upsell", "description": null},
            {"id": "enterprise-deals", "label": "Enterprise deals", "description": null}
          ],
          "allowMultiple": true,
          "minSelections": 1,
          "maxSelections": 3,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other focus (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 3,
        "type": "Quadrant",
        "title": "Account Prioritization",
        "prompt": "Map target accounts by deal size and win probability",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Win Probability",
          "yAxisLabel": "Deal Size",
          "topLeftLabel": "Large Deal, Low Probability (Long Shot)",
          "topRightLabel": "Large Deal, High Probability (Focus Here)",
          "bottomLeftLabel": "Small Deal, Low Probability (Deprioritize)",
          "bottomRightLabel": "Small Deal, High Probability (Quick Wins)"
        }
      },
      {
        "order": 4,
        "type": "GeneralFeedback",
        "title": "Obstacles & Support Needed",
        "prompt": "What obstacles do you face and what support do you need?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "product-gaps", "label": "Product Gaps", "icon": "‚ö†Ô∏è"},
            {"id": "pricing-competition", "label": "Pricing/Competition", "icon": "üí∞"},
            {"id": "marketing-support", "label": "Marketing Support", "icon": "üì¢"},
            {"id": "sales-tools", "label": "Sales Tools", "icon": "üõ†Ô∏è"},
            {"id": "training-needed", "label": "Training Needed", "icon": "üìö"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the obstacle or support needed...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 5,
        "type": "Rating",
        "title": "Confidence in Targets",
        "prompt": "How confident are you in hitting this quarter's targets?",
        "durationMinutes": 5,
        "config": {
          "scale": 10,
          "minLabel": "1 - Not Confident",
          "maxLabel": "10 - Very Confident",
          "midpointLabel": "5 - Moderately Confident",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What would increase your confidence?",
          "displayType": "Slider",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
