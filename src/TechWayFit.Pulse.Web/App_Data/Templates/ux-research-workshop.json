{
  "name": "UX Research Workshop",
  "description": "User research with feature prioritization",
  "category": "ProductDiscovery",
  "iconEmoji": "ðŸŽ¨",
  "config": {
    "title": "User Experience Research Session",
    "goal": "Understand user needs and prioritize UX improvements",
    "context": "User research and design feedback workshop",
    "settings": {
      "durationMinutes": 90,
      "allowAnonymous": false,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "userType",
          "label": "User Type",
          "type": "select",
          "required": true,
          "options": [
            "End User",
            "Power User",
            "Administrator",
            "Manager",
            "Developer/Technical"
          ]
        },
        {
          "name": "experienceLevel",
          "label": "Experience with Product",
          "type": "select",
          "required": false,
          "options": [
            "New User (< 1 month)",
            "Regular User (1-6 months)",
            "Experienced User (6+ months)"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Product Perception",
        "prompt": "What one word comes to mind when using our product?"
      },
      {
        "order": 2,
        "type": "GeneralFeedback",
        "title": "User Pain Points",
        "prompt": "What challenges or frustrations do you experience?",
        "config": {
          "categories": [
            "Navigation/Usability",
            "Performance/Speed",
            "Missing Features",
            "Confusing Interface",
            "Mobile Experience",
            "Other"
          ]
        }
      },
      {
        "order": 3,
        "type": "Poll",
        "title": "Top UX Improvement",
        "prompt": "Which improvement would add the most value for you?",
        "config": {
          "options": [
            "Simplified navigation",
            "Faster load times",
            "Better mobile experience",
            "More customization options",
            "Improved search/filters"
          ]
        }
      },
      {
        "order": 4,
        "type": "Quadrant",
        "title": "Feature Prioritization",
        "prompt": "Map features by usability and business value",
        "config": {
          "xAxisLabel": "Ease of Use",
          "yAxisLabel": "Business Value",
          "topLeftLabel": "High Value, Hard to Use (Improve UX)",
          "topRightLabel": "High Value, Easy to Use (Promote)",
          "bottomLeftLabel": "Low Value, Hard to Use (Remove/Hide)",
          "bottomRightLabel": "Low Value, Easy to Use (Maintain)"
        }
      },
      {
        "order": 5,
        "type": "Rating",
        "title": "Overall User Satisfaction",
        "prompt": "How would you rate your overall experience?",
        "config": {
          "maxRating": 10,
          "ratingLabel": "Satisfaction Score (NPS)"
        }
      }
    ]
  }
}
