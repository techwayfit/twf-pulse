{
  "name": "UX Research Workshop",
  "description": "User research with feature prioritization",
  "category": "ProductDiscovery",
  "iconEmoji": "ðŸŽ¨",
  "config": {
    "title": "User Experience Research Session",
    "goal": "Understand user needs and prioritize UX improvements",
    "context": "User research and design feedback workshop",
    "settings": {
      "durationMinutes": 90,
      "allowAnonymous": false,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "userType",
          "label": "User Type",
          "type": "select",
          "required": true,
          "options": [
            "End User",
            "Power User",
            "Administrator",
            "Manager",
            "Developer/Technical"
          ]
        },
        {
          "name": "experienceLevel",
          "label": "Experience with Product",
          "type": "select",
          "required": false,
          "options": [
            "New User (< 1 month)",
            "Regular User (1-6 months)",
            "Experienced User (6+ months)"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Product Perception",
        "prompt": "What one word comes to mind when using our product?",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "GeneralFeedback",
        "title": "User Pain Points",
        "prompt": "What challenges or frustrations do you experience?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "navigation-usability", "label": "Navigation/Usability", "icon": "ðŸ§­"},
            {"id": "performance-speed", "label": "Performance/Speed", "icon": "âš¡"},
            {"id": "missing-features", "label": "Missing Features", "icon": "âŒ"},
            {"id": "confusing-interface", "label": "Confusing Interface", "icon": "ðŸ˜•"},
            {"id": "mobile-experience", "label": "Mobile Experience", "icon": "ðŸ“±"},
            {"id": "other", "label": "Other", "icon": "ðŸ“"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the pain point you experience...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 3,
        "type": "Poll",
        "title": "Top UX Improvement",
        "prompt": "Which improvement would add the most value for you?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "simplified-navigation", "label": "Simplified navigation", "description": null},
            {"id": "faster-load-times", "label": "Faster load times", "description": null},
            {"id": "better-mobile", "label": "Better mobile experience", "description": null},
            {"id": "more-customization", "label": "More customization options", "description": null},
            {"id": "improved-search", "label": "Improved search/filters", "description": null}
          ],
          "allowMultiple": true,
          "minSelections": 1,
          "maxSelections": 3,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other improvement (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 4,
        "type": "Quadrant",
        "title": "Feature Prioritization",
        "prompt": "Map features by usability and business value",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Ease of Use",
          "yAxisLabel": "Business Value",
          "topLeftLabel": "High Value, Hard to Use (Improve UX)",
          "topRightLabel": "High Value, Easy to Use (Promote)",
          "bottomLeftLabel": "Low Value, Hard to Use (Remove/Hide)",
          "bottomRightLabel": "Low Value, Easy to Use (Maintain)"
        }
      },
      {
        "order": 5,
        "type": "Rating",
        "title": "Overall User Satisfaction",
        "prompt": "How would you rate your overall experience?",
        "durationMinutes": 5,
        "config": {
          "scale": 10,
          "minLabel": "0 - Detractor",
          "maxLabel": "10 - Promoter",
          "midpointLabel": "5 - Passive",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What's the main reason for your score?",
          "displayType": "Slider",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
