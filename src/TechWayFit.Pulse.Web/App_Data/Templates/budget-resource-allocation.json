{
  "name": "Budget & Resource Allocation",
  "description": "Financial planning with cost-benefit prioritization",
  "category": "ProductDiscovery",
  "iconEmoji": "üí∞",
  "config": {
    "title": "Budget Planning & Resource Allocation",
    "goal": "Prioritize budget allocation and resource distribution across initiatives",
    "context": "Quarterly or annual budget planning session",
    "settings": {
      "durationMinutes": 120,
      "allowAnonymous": false,
      "allowLateJoin": false,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "department",
          "label": "Department/Team",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Executive/VP",
            "Director",
            "Manager",
            "Team Lead",
            "Finance"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Budget Priorities",
        "prompt": "What should be our top budget priority this period?",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "GeneralFeedback",
        "title": "Funding Requests",
        "prompt": "Submit your funding requests and justification",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {
              "id": "headcount",
              "label": "Headcount",
              "icon": "üë•"
            },
            {
              "id": "technology-tools",
              "label": "Technology/Tools",
              "icon": "üíª"
            },
            {
              "id": "marketing-sales",
              "label": "Marketing/Sales",
              "icon": "üì¢"
            },
            {
              "id": "infrastructure",
              "label": "Infrastructure",
              "icon": "üñ•Ô∏è"
            },
            {
              "id": "training-development",
              "label": "Training/Development",
              "icon": "üìö"
            },
            {
              "id": "other",
              "label": "Other",
              "icon": "üìù"
            }
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe your funding request...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 3,
        "type": "Poll",
        "title": "Allocation Approach",
        "prompt": "What approach should we use for budget allocation?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {
              "id": "equal-distribution",
              "label": "Equal distribution across teams",
              "description": null
            },
            {
              "id": "priority-based",
              "label": "Priority-based allocation",
              "description": null
            },
            {
              "id": "roi-driven",
              "label": "ROI-driven approach",
              "description": null
            },
            {
              "id": "growth-first",
              "label": "Growth areas first",
              "description": null
            },
            {
              "id": "maintain-current",
              "label": "Maintain current ratios",
              "description": null
            }
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other approach (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 4,
        "type": "Quadrant",
        "title": "Cost vs Business Value",
        "prompt": "Map initiatives by total cost and business value",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Total Cost",
          "yAxisLabel": "Business Value",
          "topLeftLabel": "High Value, Low Cost (Fund First)",
          "topRightLabel": "High Value, High Cost (Strategic Investment)",
          "bottomLeftLabel": "Low Value, Low Cost (Nice to Have)",
          "bottomRightLabel": "Low Value, High Cost (Avoid)"
        }
      },
      {
        "order": 5,
        "type": "GeneralFeedback",
        "title": "Budget Constraints & Risks",
        "prompt": "What constraints or risks should we consider?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": false,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe constraints or risks...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 6,
        "type": "Rating",
        "title": "Stakeholder Confidence",
        "prompt": "How confident are you in this budget plan?",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Not Confident",
          "maxLabel": "5 - Very Confident",
          "midpointLabel": "3 - Moderately Confident",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What would increase your confidence?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
