{
  "name": "Performance Review Calibration",
  "description": "Talent mapping with fair rating alignment",
  "category": "TeamBuilding",
  "iconEmoji": "‚≠ê",
  "config": {
    "title": "Performance Calibration Session",
    "goal": "Align managers on fair and consistent performance ratings",
    "context": "Manager calibration for performance review cycle",
    "settings": {
      "durationMinutes": 120,
      "allowAnonymous": true,
      "allowLateJoin": false,
      "showResultsDuringActivity": false
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Director",
            "Senior Manager",
            "Manager",
            "Team Lead",
            "HR Partner"
          ]
        },
        {
          "name": "department",
          "label": "Department",
          "type": "text",
          "required": true
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Team Strengths",
        "prompt": "What are the key strengths you see across the team?",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "Quadrant",
        "title": "Talent Mapping (9-Box)",
        "prompt": "Map team members by performance and potential (anonymous)",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Current Performance",
          "yAxisLabel": "Future Potential",
          "topLeftLabel": "High Potential, Developing Performance",
          "topRightLabel": "High Potential, High Performance (Stars)",
          "bottomLeftLabel": "Low Potential, Low Performance (Action Needed)",
          "bottomRightLabel": "Solid Performance, Limited Growth"
        }
      },
      {
        "order": 3,
        "type": "GeneralFeedback",
        "title": "Development Needs",
        "prompt": "What development areas should we focus on?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "leadership", "label": "Leadership Skills", "icon": "üëî"},
            {"id": "technical", "label": "Technical Skills", "icon": "üíª"},
            {"id": "communication", "label": "Communication", "icon": "üí¨"},
            {"id": "strategic", "label": "Strategic Thinking", "icon": "üéØ"},
            {"id": "collaboration", "label": "Collaboration", "icon": "ü§ù"},
            {"id": "domain-expertise", "label": "Domain Expertise", "icon": "üìö"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the development need...",
          "allowAnonymous": true,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 4,
        "type": "Poll",
        "title": "Rating Distribution Check",
        "prompt": "Does our rating distribution align with organizational guidelines?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "well-distributed", "label": "Yes, well distributed", "description": null},
            {"id": "too-many-high", "label": "Too many high ratings", "description": null},
            {"id": "too-many-low", "label": "Too many low ratings", "description": null},
            {"id": "needs-adjustment", "label": "Needs adjustment", "description": null},
            {"id": "unsure", "label": "Unsure", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": false,
          "customOptionPlaceholder": "Other (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 5,
        "type": "GeneralFeedback",
        "title": "Promotion & Succession Planning",
        "prompt": "Who are the promotion candidates and succession plan considerations?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": false,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Share your succession planning thoughts...",
          "allowAnonymous": true,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 6,
        "type": "Rating",
        "title": "Calibration Fairness",
        "prompt": "How confident are you that this calibration is fair and unbiased?",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Not Confident",
          "maxLabel": "5 - Very Confident",
          "midpointLabel": "3 - Moderately Confident",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What concerns do you have?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
