{
  "name": "University Lecture Engagement",
  "description": "Interactive learning with polls and concepts",
  "category": "Training",
  "iconEmoji": "ðŸŽ“",
  "config": {
    "title": "Interactive University Lecture",
    "goal": "Engage students and assess comprehension",
    "context": "Interactive classroom session",
    "settings": {
      "durationMinutes": 90,
      "allowAnonymous": true,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "studentId",
          "label": "Student ID",
          "type": "text",
          "required": false
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "Poll",
        "title": "Prior Knowledge Check",
        "prompt": "How familiar are you with today's topic?",
        "durationMinutes": 3,
        "config": {
          "options": [
            {"id": "never-heard", "label": "Never heard of it", "description": null},
            {"id": "heard-about", "label": "Heard about it", "description": null},
            {"id": "basic", "label": "Basic understanding", "description": null},
            {"id": "good", "label": "Good understanding", "description": null},
            {"id": "expert", "label": "Expert level", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": false,
          "customOptionPlaceholder": "Other (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 2,
        "type": "WordCloud",
        "title": "Topic Associations",
        "prompt": "What words or concepts come to mind with this topic?",
        "durationMinutes": 5
      },
      {
        "order": 3,
        "type": "Poll",
        "title": "Comprehension Check",
        "prompt": "Which statement best describes the key concept?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "statement-a", "label": "Statement A", "description": null},
            {"id": "statement-b", "label": "Statement B", "description": null},
            {"id": "statement-c", "label": "Statement C", "description": null},
            {"id": "statement-d", "label": "Statement D", "description": null},
            {"id": "not-sure", "label": "Not sure", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": false,
          "customOptionPlaceholder": "Other (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 4,
        "type": "Quadrant",
        "title": "Concept Mapping",
        "prompt": "Map related concepts by familiarity and importance",
        "durationMinutes": 12,
        "config": {
          "xAxisLabel": "Your Familiarity",
          "yAxisLabel": "Importance to Course",
          "topLeftLabel": "Important but Unfamiliar (Need to Study)",
          "topRightLabel": "Important and Familiar (Core Knowledge)",
          "bottomLeftLabel": "Less Important, Unfamiliar (Optional)",
          "bottomRightLabel": "Less Important, Familiar (Review)"
        }
      },
      {
        "order": 5,
        "type": "QnA",
        "title": "Questions & Discussion",
        "prompt": "Ask questions or share insights about the lecture",
        "durationMinutes": 10
      },
      {
        "order": 6,
        "type": "Rating",
        "title": "Lecture Feedback",
        "prompt": "How clear was today's lecture?",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Very Confusing",
          "maxLabel": "5 - Very Clear",
          "midpointLabel": "3 - Moderately Clear",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What could make it clearer?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
