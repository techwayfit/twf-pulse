{
  "name": "Customer Feedback Session",
  "description": "Focus group with feature preferences",
  "category": "ProductDiscovery",
  "iconEmoji": "üí¨",
  "config": {
    "title": "Customer Feedback & Discovery",
    "goal": "Gather customer insights and feature preferences",
    "context": "Customer focus group and feedback session",
    "settings": {
      "durationMinutes": 60,
      "allowAnonymous": false,
      "allowLateJoin": true,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "company",
          "label": "Company",
          "type": "text",
          "required": false
        },
        {
          "name": "customerType",
          "label": "Customer Type",
          "type": "select",
          "required": true,
          "options": [
            "New Customer",
            "Active Customer",
            "Power User",
            "Evaluating",
            "Former Customer"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "Product Perception",
        "prompt": "How would you describe our product in one word?",
        "durationMinutes": 3
      },
      {
        "order": 2,
        "type": "Poll",
        "title": "Overall Satisfaction",
        "prompt": "How satisfied are you with our product?",
        "durationMinutes": 3,
        "config": {
          "options": [
            {"id": "very-dissatisfied", "label": "üòû Very dissatisfied", "description": null},
            {"id": "somewhat-dissatisfied", "label": "üòê Somewhat dissatisfied", "description": null},
            {"id": "neutral", "label": "üôÇ Neutral", "description": null},
            {"id": "satisfied", "label": "üòä Satisfied", "description": null},
            {"id": "very-satisfied", "label": "üéâ Very satisfied", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": false,
          "customOptionPlaceholder": "Other (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 3,
        "type": "GeneralFeedback",
        "title": "Feature Requests",
        "prompt": "What features or improvements would you like to see?",
        "durationMinutes": 8,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "new-features", "label": "New Features", "icon": "‚ú®"},
            {"id": "usability", "label": "Usability", "icon": "üé®"},
            {"id": "performance", "label": "Performance", "icon": "‚ö°"},
            {"id": "integration", "label": "Integration", "icon": "üîó"},
            {"id": "support", "label": "Support", "icon": "üÜò"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe your feature request...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 4,
        "type": "Poll",
        "title": "Top Feature Priority",
        "prompt": "Which feature would deliver the most value?",
        "durationMinutes": 3,
        "config": {
          "options": [
            {"id": "feature-a", "label": "Feature A", "description": "To be defined during session"},
            {"id": "feature-b", "label": "Feature B", "description": null},
            {"id": "feature-c", "label": "Feature C", "description": null},
            {"id": "feature-d", "label": "Feature D", "description": null},
            {"id": "feature-e", "label": "Feature E", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other feature (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 5,
        "type": "Quadrant",
        "title": "Customer Needs Matrix",
        "prompt": "Map your needs by importance and satisfaction",
        "durationMinutes": 12,
        "config": {
          "xAxisLabel": "Current Satisfaction",
          "yAxisLabel": "Importance",
          "topLeftLabel": "Important but Unsatisfied (Fix First!)",
          "topRightLabel": "Important and Satisfied (Keep It Up)",
          "bottomLeftLabel": "Less Important, Unsatisfied (Low Priority)",
          "bottomRightLabel": "Less Important, Satisfied (Good)"
        }
      },
      {
        "order": 6,
        "type": "Rating",
        "title": "Likelihood to Recommend",
        "prompt": "How likely are you to recommend us? (NPS)",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Not Likely",
          "maxLabel": "5 - Very Likely",
          "midpointLabel": "3 - Neutral",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "Why did you choose this rating?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
