{
  "name": "Incident Review",
  "description": "Root cause ladder + fixes",
  "category": "IncidentReview",
  "iconEmoji": "üö®",
  "config": {
    "title": "Incident Post-Mortem",
    "goal": "Learn from the incident and prevent recurrence",
    "context": "Post-incident review and learning session",
    "settings": {
      "durationMinutes": 60,
      "allowAnonymous": false,
      "allowLateJoin": false,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Incident Commander",
            "Engineer",
            "SRE",
            "Support",
            "Product"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "QnA",
        "title": "Incident Timeline",
        "prompt": "Share key events during the incident",
        "durationMinutes": 8
      },
      {
        "order": 2,
        "type": "FiveWhys",
        "title": "Root Cause Analysis",
        "prompt": "Why did this incident occur?",
        "durationMinutes": 15,
        "config": {
          "maxDepth": 5
        }
      },
      {
        "order": 3,
        "type": "GeneralFeedback",
        "title": "Contributing Factors",
        "prompt": "What other factors contributed?",
        "durationMinutes": 8,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {
              "id": "technical",
              "label": "Technical",
              "icon": "üíª"
            },
            {
              "id": "process",
              "label": "Process",
              "icon": "‚öôÔ∏è"
            },
            {
              "id": "communication",
              "label": "Communication",
              "icon": "üí¨"
            },
            {
              "id": "monitoring",
              "label": "Monitoring",
              "icon": "üìä"
            },
            {
              "id": "documentation",
              "label": "Documentation",
              "icon": "üìù"
            }
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the contributing factor...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 4,
        "type": "Quadrant",
        "title": "Remediation Prioritization",
        "prompt": "Prioritize fixes and improvements",
        "durationMinutes": 12,
        "config": {
          "xAxisLabel": "Effort",
          "yAxisLabel": "Impact on Prevention",
          "topLeftLabel": "High Impact, Low Effort (Do Now)",
          "topRightLabel": "High Impact, High Effort (Schedule)",
          "bottomLeftLabel": "Low Impact, Low Effort (Nice to Have)",
          "bottomRightLabel": "Low Impact, High Effort (Skip)"
        }
      },
      {
        "order": 5,
        "type": "GeneralFeedback",
        "title": "Action Items",
        "prompt": "What are the concrete next steps?",
        "durationMinutes": 8,
        "config": {
          "categoriesEnabled": false,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the action item...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 6,
        "type": "Rating",
        "title": "Incident Response Rating",
        "prompt": "How well did we respond?",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "Poor Response",
          "maxLabel": "Excellent Response",
          "midpointLabel": "Adequate",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What could we improve?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
