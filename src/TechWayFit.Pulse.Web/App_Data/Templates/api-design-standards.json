{
  "name": "API Design & Technical Standards",
  "description": "API design review with complexity assessment",
  "category": "Training",
  "iconEmoji": "üîå",
  "config": {
    "title": "API Design & Standards Workshop",
    "goal": "Define API standards and review endpoint designs",
    "context": "Platform team API design and technical standards session",
    "settings": {
      "durationMinutes": 90,
      "allowAnonymous": false,
      "allowLateJoin": false,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Backend Engineer",
            "Frontend Engineer",
            "API Architect",
            "DevOps/Platform",
            "Product Manager"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "WordCloud",
        "title": "API Design Principles",
        "prompt": "What principles should guide our API design?",
        "durationMinutes": 5
      },
      {
        "order": 2,
        "type": "GeneralFeedback",
        "title": "Endpoint Proposals",
        "prompt": "Share proposed API endpoints and their purpose",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "user-management", "label": "User Management", "icon": "üë•"},
            {"id": "data-resources", "label": "Data/Resources", "icon": "üì¶"},
            {"id": "authentication", "label": "Authentication", "icon": "üîê"},
            {"id": "webhooks-events", "label": "Webhooks/Events", "icon": "üîî"},
            {"id": "admin-internal", "label": "Admin/Internal", "icon": "‚öôÔ∏è"},
            {"id": "other", "label": "Other", "icon": "üìù"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the API endpoint...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 3,
        "type": "Poll",
        "title": "Naming Convention",
        "prompt": "What naming convention should we standardize on?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "restful", "label": "RESTful (plural nouns: /users, /posts)", "description": null},
            {"id": "rpc-style", "label": "RPC-style (verbs: /getUser, /createPost)", "description": null},
            {"id": "graphql", "label": "GraphQL-style (single endpoint)", "description": null},
            {"id": "hybrid", "label": "Hybrid approach", "description": null},
            {"id": "domain-driven", "label": "Domain-driven naming", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other convention (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 4,
        "type": "Poll",
        "title": "API Versioning Strategy",
        "prompt": "How should we handle API versioning?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "uri-versioning", "label": "URI versioning (/v1/users)", "description": null},
            {"id": "header-versioning", "label": "Header versioning (Accept: application/vnd.api+json;version=1)", "description": null},
            {"id": "query-param", "label": "Query parameter (?version=1)", "description": null},
            {"id": "no-versioning", "label": "No versioning (breaking changes in new endpoints)", "description": null},
            {"id": "needs-discussion", "label": "Needs discussion", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other strategy (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 5,
        "type": "Quadrant",
        "title": "Endpoint Complexity Assessment",
        "prompt": "Map endpoints by implementation complexity and developer utility",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Implementation Complexity",
          "yAxisLabel": "Developer Utility",
          "topLeftLabel": "High Utility, Low Complexity (Build First)",
          "topRightLabel": "High Utility, High Complexity (Prioritize)",
          "bottomLeftLabel": "Low Utility, Low Complexity (Nice to Have)",
          "bottomRightLabel": "Low Utility, High Complexity (Skip)"
        }
      },
      {
        "order": 6,
        "type": "GeneralFeedback",
        "title": "Standards & Best Practices",
        "prompt": "What other API standards should we adopt?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "auth-security", "label": "Authentication/Security", "icon": "üîí"},
            {"id": "error-handling", "label": "Error Handling", "icon": "‚ö†Ô∏è"},
            {"id": "pagination", "label": "Pagination", "icon": "üìÑ"},
            {"id": "rate-limiting", "label": "Rate Limiting", "icon": "‚è±Ô∏è"},
            {"id": "documentation", "label": "Documentation", "icon": "üìö"},
            {"id": "testing", "label": "Testing", "icon": "üß™"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the API standard...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 7,
        "type": "Rating",
        "title": "Developer Experience Rating",
        "prompt": "How would you rate the proposed API design for developer experience?",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Poor DX",
          "maxLabel": "5 - Excellent DX",
          "midpointLabel": "3 - Good DX",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "What would improve the developer experience?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
