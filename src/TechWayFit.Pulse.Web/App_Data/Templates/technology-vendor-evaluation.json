{
  "name": "Technology & Vendor Evaluation",
  "description": "Structured vendor selection with feature-cost analysis",
  "category": "ProductDiscovery",
  "iconEmoji": "üîç",
  "config": {
    "title": "Technology Selection & Vendor Evaluation",
    "goal": "Evaluate and select the best technology solution or vendor",
    "context": "Technology evaluation, RFP review, or build vs buy decision",
    "settings": {
      "durationMinutes": 120,
      "allowAnonymous": false,
      "allowLateJoin": false,
      "showResultsDuringActivity": true
    },
    "joinFormSchema": {
      "fields": [
        {
          "name": "name",
          "label": "Your Name",
          "type": "text",
          "required": true
        },
        {
          "name": "role",
          "label": "Role",
          "type": "select",
          "required": true,
          "options": [
            "Engineering/Technical",
            "Product Management",
            "Architecture",
            "Security",
            "Operations",
            "Finance/Procurement"
          ]
        },
        {
          "name": "stakeholder",
          "label": "Stakeholder Type",
          "type": "select",
          "required": false,
          "options": [
            "Decision Maker",
            "Technical Evaluator",
            "End User",
            "Budget Approver"
          ]
        }
      ]
    },
    "activities": [
      {
        "order": 1,
        "type": "GeneralFeedback",
        "title": "Requirements Gathering",
        "prompt": "What are the must-have requirements for this solution?",
        "durationMinutes": 10,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "core-features", "label": "Core Features", "icon": "‚ú®"},
            {"id": "integration-api", "label": "Integration/API", "icon": "üîó"},
            {"id": "security-compliance", "label": "Security/Compliance", "icon": "üîí"},
            {"id": "scalability-performance", "label": "Scalability/Performance", "icon": "‚ö°"},
            {"id": "support-sla", "label": "Support/SLA", "icon": "üÜò"},
            {"id": "cost-licensing", "label": "Cost/Licensing", "icon": "üí∞"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the requirement...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 2,
        "type": "Poll",
        "title": "Initial Vendor Preference",
        "prompt": "Which vendor or solution option do you prefer?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "vendor-a", "label": "Vendor A", "description": null},
            {"id": "vendor-b", "label": "Vendor B", "description": null},
            {"id": "vendor-c", "label": "Vendor C", "description": null},
            {"id": "build-inhouse", "label": "Build In-House", "description": null},
            {"id": "need-more-info", "label": "Need More Information", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other vendor (please specify)",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 3,
        "type": "Quadrant",
        "title": "Solution Comparison Matrix",
        "prompt": "Map vendors by feature completeness and total cost of ownership",
        "durationMinutes": 15,
        "config": {
          "xAxisLabel": "Total Cost of Ownership",
          "yAxisLabel": "Feature Completeness",
          "topLeftLabel": "Feature-Rich, Low Cost (Best Value)",
          "topRightLabel": "Feature-Rich, High Cost (Premium)",
          "bottomLeftLabel": "Limited Features, Low Cost (Basic)",
          "bottomRightLabel": "Limited Features, High Cost (Avoid)"
        }
      },
      {
        "order": 4,
        "type": "Rating",
        "title": "Vendor Capabilities Assessment",
        "prompt": "Rate the leading vendor on key capabilities",
        "durationMinutes": 5,
        "config": {
          "scale": 5,
          "minLabel": "1 - Poor",
          "maxLabel": "5 - Excellent",
          "midpointLabel": "3 - Good",
          "allowComments": true,
          "commentRequired": false,
          "commentPlaceholder": "Which capabilities are strongest/weakest?",
          "displayType": "Stars",
          "showAverageAfterSubmit": false,
          "maxResponsesPerParticipant": 1
        }
      },
      {
        "order": 5,
        "type": "GeneralFeedback",
        "title": "Implementation Risks",
        "prompt": "What risks or concerns do you have about implementation?",
        "durationMinutes": 8,
        "config": {
          "categoriesEnabled": true,
          "categories": [
            {"id": "technical-integration", "label": "Technical Integration", "icon": "üîß"},
            {"id": "migration-complexity", "label": "Migration Complexity", "icon": "üì¶"},
            {"id": "vendor-lock-in", "label": "Vendor Lock-in", "icon": "üîí"},
            {"id": "training-adoption", "label": "Training/Adoption", "icon": "üìö"},
            {"id": "ongoing-costs", "label": "Ongoing Costs", "icon": "üí∏"}
          ],
          "requireCategory": true,
          "showCharacterCount": true,
          "maxLength": 1000,
          "minLength": 10,
          "placeholder": "Describe the risk or concern...",
          "allowAnonymous": false,
          "maxResponsesPerParticipant": 5
        }
      },
      {
        "order": 6,
        "type": "Poll",
        "title": "Final Recommendation",
        "prompt": "Based on the evaluation, what is your recommendation?",
        "durationMinutes": 5,
        "config": {
          "options": [
            {"id": "proceed-top-vendor", "label": "Proceed with top vendor", "description": null},
            {"id": "more-evaluation", "label": "Need more evaluation", "description": null},
            {"id": "additional-demos", "label": "Request additional demos", "description": null},
            {"id": "alternative-approach", "label": "Consider alternative approach", "description": null},
            {"id": "build-inhouse", "label": "Build in-house instead", "description": null}
          ],
          "allowMultiple": false,
          "minSelections": 1,
          "maxSelections": 1,
          "allowCustomOption": true,
          "customOptionPlaceholder": "Other recommendation",
          "randomizeOrder": false,
          "showResultsAfterSubmit": true,
          "maxResponsesPerParticipant": 1
        }
      }
    ]
  }
}
