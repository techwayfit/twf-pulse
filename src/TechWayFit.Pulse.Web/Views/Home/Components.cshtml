    <!-- StatCards -->
    <div class="row mb-5 pb-4 border-bottom">
        <div class="col-lg-6">
            <h3 class="mb-3">StatCards</h3>
            <pre class="bg-light p-3 rounded"><code>@@await Component.InvokeAsync("StatCards", new
{
    cards = new List&lt;StatCardData&gt;
    {
        new() { Icon = "fa-solid fa-bolt", Value = "42", Label = "Active Sessions", Variant = "blue" },
        new() { Icon = "fa-solid fa-users", Value = "1,234", Label = "Total Participants", Variant = "green" },
        new() { Icon = "fa-solid fa-chart-line", Value = "89%", Label = "Engagement Rate", Variant = "info" }
    }
})</code></pre>
        </div>
        <div class="col-lg-6">
            <h5 class="text-muted mb-3">Rendered Component</h5>
            @await Component.InvokeAsync("StatCards", new
            {
                cards = new List<TechWayFit.Pulse.Web.Models.StatCardData>
                {
                    new() { Icon = "fa-solid fa-bolt", Value = "42", Label = "Active Sessions", Variant = "blue" },
                    new() { Icon = "fa-solid fa-users", Value = "1,234", Label = "Total Participants", Variant = "green" },
                    new() { Icon = "fa-solid fa-chart-line", Value = "89%", Label = "Engagement Rate", Variant = "info" }
                }
            })
        </div>
