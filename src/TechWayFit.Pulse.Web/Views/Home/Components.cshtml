    <!-- TreeDropdown -->
    <div class="row mb-5 pb-4 border-bottom">
        <div class="col-lg-6">
            <h3 class="mb-3">TreeDropdown</h3>
            <pre class="bg-light p-3 rounded"><code>@@await Component.InvokeAsync("TreeDropdown", new
{
    id = "categoryDropdown",
    placeholder = "Select a category",
    items = new List&lt;TreeDropdownItem&gt;
    {
        new() { Value = "workshops", Text = "Workshops", Icon = "fa-solid fa-users" },
        new() { Value = "retrospectives", Text = "Retrospectives", ParentValue = "workshops", Level = 1 },
        new() { Value = "brainstorming", Text = "Brainstorming", ParentValue = "workshops", Level = 1 }
    },
    allowClear = true
})</code></pre>
        </div>
        <div class="col-lg-6">
            <h5 class="text-muted mb-3">Rendered Component</h5>
            @await Component.InvokeAsync("TreeDropdown", new
            {
                id = "categoryDropdown",
                placeholder = "Select a category",
