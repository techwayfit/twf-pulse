        <!-- Rating & Feedback -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3 me-3">
                                <i class="fas fa-star fs-4 text-danger"></i>
                            </div>
                            <h3 class="h5 mb-0">Rating Activities</h3>
                        </div>
                        <p class="text-muted mb-3">
                            Star or numeric ratings for satisfaction, likelihood, or agreement scales.
                        </p>
                        <ul class="small text-muted mb-0">
                            <li>1-5 star ratings</li>
                            <li>Average score calculation</li>
                            <li>Distribution charts</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
