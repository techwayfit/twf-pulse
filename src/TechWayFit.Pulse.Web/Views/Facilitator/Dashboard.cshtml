@model IReadOnlyList<TechWayFit.Pulse.Domain.Entities.Session>

@{
    ViewData["Title"] = "Dashboard - TechWayFit Pulse";
    var userEmail = ViewData["UserEmail"] as string;
    var userName = ViewData["UserName"] as string;
    var sessionGroups = ViewData["Groups"] as IEnumerable<TechWayFit.Pulse.Domain.Entities.SessionGroup>;
}

<main class="dashboard-main">
    <div class="container" style="max-width: 1200px;">
        <!-- Header -->
        <div class="dashboard-header">
            <div class="dashboard-header-text">
                <h2 class="dashboard-title">My Workshop Sessions</h2>
                <p class="dashboard-subtitle">Welcome back, <strong>@userName</strong></p>
            </div>
            <div class="dashboard-header-actions">
                <a href="@Url.Action("Groups", "Facilitator")" class="btn btn-pulse-outline">
                    <span class="d-none d-sm-inline">üìÅ </span>Manage Groups
                </a>
                <a href="@Url.Action("Create", "Facilitator")" class="btn btn-pulse-primary">
                    <span class="d-none d-sm-inline">‚ú® </span>Create Session
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stat-cards-mobile-wrapper">
            <div class="row g-3 g-md-4 mb-4">
            <div class="col-6 col-lg-3">
                <div class="stat-card stat-card-primary">
                    <div class="stat-card-body">
                        <div class="stat-card-content">
                            <div class="stat-card-label">Total Sessions</div>
                            <div class="stat-card-value">@Model.Count</div>
                        </div>
                        <div class="stat-card-icon text-primary">üìä</div>
                    </div>
                </div>
            </div>

            <div class="col-6 col-lg-3">
                <div class="stat-card stat-card-success">
                    <div class="stat-card-body">
                        <div class="stat-card-content">
                            <div class="stat-card-label">Live Sessions</div>
                            <div class="stat-card-value">@Model.Count(s => s.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Live)</div>
                        </div>
                        <div class="stat-card-icon text-success">üì°</div>
                    </div>
                </div>
            </div>

            <div class="col-6 col-lg-3">
                <div class="stat-card stat-card-warning">
                    <div class="stat-card-body">
                        <div class="stat-card-content">
                            <div class="stat-card-label">Draft Sessions</div>
                            <div class="stat-card-value">@Model.Count(s => s.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Draft)</div>
                        </div>
                        <div class="stat-card-icon text-warning">üìù</div>
                    </div>
                </div>
            </div>

            <div class="col-6 col-lg-3">
                @{
                    var completedCount = Model.Count(s => s.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Ended);
                    var isEmptyState = completedCount == 0;
                }
                <div class="stat-card stat-card-secondary @(isEmptyState ? "stat-card-empty" : "")">
                    <div class="stat-card-body">
                        <div class="stat-card-content">
                            <div class="stat-card-label">Completed</div>
                            <div class="stat-card-value">@completedCount</div>
                        </div>
                        <div class="stat-card-icon text-secondary">@(isEmptyState ? "üéØ" : "‚úÖ")</div>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <!-- Collapsible Search and Filter Bar -->
        <div class="filter-toggle-wrapper d-lg-none">
            <button class="filter-toggle-btn" type="button" data-bs-toggle="collapse" data-bs-target="#filterSection" aria-expanded="false" aria-controls="filterSection">
                <span class="filter-toggle-icon">üîç</span>
                <span class="filter-toggle-text">Search & Filter</span>
                <span class="filter-toggle-arrow">‚ñº</span>
            </button>
        </div>

        <div class="collapse d-lg-block" id="filterSection">
            <div class="filter-card">
                <div class="filter-card-body">
                <div class="row g-3 align-items-end">
                    <div class="col-12 col-md-3">
                        <label class="form-label fw-semibold d-none d-md-block">Search</label>
                        <input type="text" class="form-control" id="sessionSearch" placeholder="Search sessions...">
                    </div>
                    <div class="col-6 col-md-2">
                        <label class="form-label fw-semibold d-none d-md-block">Status</label>
                        <select class="form-select" id="statusFilter">
                            <option value="">All</option>
                            <option value="Live">Live</option>
                            <option value="Draft">Draft</option>
                            <option value="Ended">Ended</option>
                            <option value="Expired">Expired</option>
                        </select>
                    </div>
                    <div class="col-6 col-md-3">
                        <div>
                            <label class="form-label fw-semibold d-none d-md-block">Group</label>
                            <div class="flex-grow-1">
                                @{
                                    var treeItems = new List<TechWayFit.Pulse.Web.ViewComponents.TreeDropdown.TreeDropdownItem>();
                                    
                                    if (sessionGroups != null)
                                    {
                                        foreach (var group in sessionGroups)
                                        {
                                            treeItems.Add(new TechWayFit.Pulse.Web.ViewComponents.TreeDropdown.TreeDropdownItem
                                            {
                                                Value = group.Id.ToString(),
                                                Text = group.Name,
                                                ParentValue = group.ParentGroupId?.ToString(),
                                                Level = group.Level - 1,
                                                HasChildren = sessionGroups.Any(g => g.ParentGroupId == group.Id),
                                                Icon = group.Level == 1 ? "üìÅ" : group.Level == 2 ? "üìÇ" : "üìÑ"
                                            });
                                        }
                                    }
                                }
                                @await Component.InvokeAsync("TreeDropdown", new {
                                    id = "groupFilter",
                                    name = "groupFilter",
                                    placeholder = "All Groups",
                                    items = treeItems,
                                    allowClear = true
                                })
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <label class="form-label fw-semibold d-none d-md-block">&nbsp;</label>
                        <div class="d-flex gap-2 flex-nowrap">
                            <button type="button" class="btn btn-primary btn-lift" id="applyFilters" style="flex: 1; white-space: nowrap;">
                                Apply
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-lift" id="clearFilters" style="flex: 1; white-space: nowrap;">
                                Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <!-- Sessions Table -->
        <div class="sessions-card">
            <div class="sessions-card-body">
                @if (Model.Any())
                {
                    <!-- Desktop Table View -->
                    <div class="d-none d-lg-block">
                        <table class="sessions-table" id="sessionsTable">
                            <thead>
                                <tr>
                                    <th>Session Code</th>
                                    <th>Title</th>
                                    <th>Group</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Expires</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model)
                                {
                                    <tr data-session-id="@session.Id" 
                                        data-session-code="@session.Code"
                                        data-group-id="@(session.GroupId?.ToString() ?? "")" 
                                        data-status="@session.Status.ToString()"
                                        data-search-text="@($"{session.Code} {session.Title} {session.Goal ?? ""}").ToLower()">
                                        <td>
                                            <a href="/facilitator/live?Code=@session.Code" class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2 text-decoration-none session-code-link">
                                                @session.Code
                                            </a>
                                        </td>
                                        <td>
                                            <strong>@session.Title</strong>
                                            @if (!string.IsNullOrEmpty(session.Goal))
                                            {
                                                <br /><small class="text-muted">@session.Goal</small>
                                            }
                                        </td>
                                        <td>
                                            @if (session.GroupId.HasValue && sessionGroups != null)
                                            {
                                                var group = sessionGroups.FirstOrDefault(g => g.Id == session.GroupId.Value);
                                                if (group != null)
                                                {
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                        @group.Name
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">‚Äî</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (session.Status)
                                            {
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Live:
                                                    <span class="status-badge status-live">Live</span>
                                                    break;
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Draft:
                                                    <span class="status-badge status-draft">Draft</span>
                                                    break;
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Ended:
                                                    <span class="status-badge status-ended">Ended</span>
                                                    break;
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Expired:
                                                    <span class="status-badge status-expired">Expired</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <small>@session.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td>
                                            <small class="text-muted">@session.ExpiresAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        </td>
                                        <td class="text-end">
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" href="/facilitator/live?Code=@session.Code">
                                                            <i class="fas fa-eye text-primary me-2"></i>View Details
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="#" onclick="editSession('@session.Code'); return false;">
                                                            <i class="fas fa-edit text-info me-2"></i>Edit Details
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="#" onclick="assignGroup('@session.Code', '@session.Id'); return false;">
                                                            <i class="fas fa-folder text-warning me-2"></i>Assign Group
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Mobile Card View -->
                    <div class="d-lg-none" id="sessionCards">
                        @foreach (var session in Model)
                        {
                            <div class="session-mobile-card" 
                                 data-session-id="@session.Id" 
                                 data-group-id="@(session.GroupId?.ToString() ?? "")" 
                                 data-status="@session.Status.ToString()"
                                 data-search-text="@($"{session.Code} {session.Title} {session.Goal ?? ""}").ToLower()">
                                <div class="session-mobile-card-header">
                                    <a href="/facilitator/live?Code=@session.Code" class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2 text-decoration-none session-code-link">@session.Code</a>
                                    @switch (session.Status)
                                    {
                                        case TechWayFit.Pulse.Domain.Enums.SessionStatus.Live:
                                            <span class="status-badge status-live">Live</span>
                                            break;
                                        case TechWayFit.Pulse.Domain.Enums.SessionStatus.Draft:
                                            <span class="status-badge status-draft">Draft</span>
                                            break;
                                        case TechWayFit.Pulse.Domain.Enums.SessionStatus.Ended:
                                            <span class="status-badge status-ended">Ended</span>
                                            break;
                                        case TechWayFit.Pulse.Domain.Enums.SessionStatus.Expired:
                                            <span class="status-badge status-expired">Expired</span>
                                            break;
                                    }
                                </div>
                                <div class="session-mobile-card-body">
                                    <h6 class="session-mobile-title">@session.Title</h6>
                                    @if (!string.IsNullOrEmpty(session.Goal))
                                    {
                                        <p class="session-mobile-goal">@session.Goal</p>
                                    }
                                    <div class="session-mobile-meta">
                                        @if (session.GroupId.HasValue && sessionGroups != null)
                                        {
                                            var group = sessionGroups.FirstOrDefault(g => g.Id == session.GroupId.Value);
                                            if (group != null)
                                            {
                                                <span class="session-mobile-group">üìÅ @group.Name</span>
                                            }
                                        }
                                        <span class="session-mobile-date">Created: @session.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                                <div class="session-mobile-card-footer">
                                    <div class="dropdown w-100">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle w-100" type="button" 
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i> Actions
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end w-100">
                                            <li>
                                                <a class="dropdown-item" href="/facilitator/live?Code=@session.Code">
                                                    <i class="fas fa-eye text-primary me-2"></i>View Details
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#" onclick="editSession('@session.Code'); return false;">
                                                    <i class="fas fa-edit text-info me-2"></i>Edit Details
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#" onclick="assignGroup('@session.Code', '@session.Id'); return false;">
                                                    <i class="fas fa-folder text-warning me-2"></i>Assign Group
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="session-count-badge">
                        <span id="sessionCount">
                            @Model.Count @(Model.Count == 1 ? "session" : "sessions")
                        </span>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" fill="#0066FF" opacity="0.2"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" fill="#0066FF"/>
                            </svg>
                        </div>
                        <h3 class="empty-state-title">No Sessions Yet</h3>
                        <p class="empty-state-text">Create your first interactive workshop session and start engaging with participants!</p>
                        <a href="@Url.Action("Create", "Facilitator")" class="btn btn-pulse-primary btn-lift">
                            ‚ú® Create Your First Session
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

<!-- Edit Session Modal -->
