@model IReadOnlyList<TechWayFit.Pulse.Domain.Entities.Session>

@{
    ViewData["Title"] = "Dashboard - TechWayFit Pulse";
    var userEmail = ViewData["UserEmail"] as string;
    var userName = ViewData["UserName"] as string;
    var sessionGroups = ViewData["Groups"] as IEnumerable<TechWayFit.Pulse.Domain.Entities.SessionGroup>;
}

<main class="py-5">
    <div class="container" style="max-width: 1200px;">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
            <div>
                <h2 class="mb-1">My Workshop Sessions</h2>
                <p class="text-muted mb-0">Welcome back, <strong>@userName</strong></p>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("Groups", "Facilitator")" class="btn btn-outline-primary">
                    üìÅ Manage Groups
                </a>
                <a href="@Url.Action("Create", "Facilitator")" class="btn btn-primary pulse-btn-primary">
                    ‚ú® Create New Session
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted small">Total Sessions</div>
                                <div class="h4 mb-0 fw-bold">@Model.Count</div>
                            </div>
                            <div class="text-primary fs-2">üìä</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted small">Live Sessions</div>
                                <div class="h4 mb-0 fw-bold">@Model.Count(s => s.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Live)</div>
                            </div>
                            <div class="text-success fs-2">üì°</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted small">Draft Sessions</div>
                                <div class="h4 mb-0 fw-bold">@Model.Count(s => s.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Draft)</div>
                            </div>
                            <div class="text-warning fs-2">üìù</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="text-muted small">Completed</div>
                                <div class="h4 mb-0 fw-bold">@Model.Count(s => s.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Ended)</div>
                            </div>
                            <div class="text-secondary fs-2">‚úÖ</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filter Bar -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-3">
                <div class="row g-3 align-items-center">
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="sessionSearch" placeholder="Search by title, code, or goal...">
                    </div>
                    <div class="col-md-5">
                        <div class="mb-1">
                            <span class="text-muted small">Filter by Group:</span>
                        </div>
                        @{
                            var treeItems = new List<TechWayFit.Pulse.Web.ViewComponents.TreeDropdown.TreeDropdownItem>();
                            
                            if (sessionGroups != null)
                            {
                                foreach (var group in sessionGroups)
                                {
                                    treeItems.Add(new TechWayFit.Pulse.Web.ViewComponents.TreeDropdown.TreeDropdownItem
                                    {
                                        Value = group.Id.ToString(),
                                        Text = group.Name,
                                        ParentValue = group.ParentGroupId?.ToString(),
                                        Level = group.Level - 1,
                                        HasChildren = sessionGroups.Any(g => g.ParentGroupId == group.Id),
                                        Icon = group.Level == 1 ? "üìÅ" : group.Level == 2 ? "üìÇ" : "üìÑ"
                                    });
                                }
                            }
                        }
                        @await Component.InvokeAsync("TreeDropdown", new {
                            id = "groupFilter",
                            name = "groupFilter",
                            placeholder = "All Groups",
                            items = treeItems,
                            allowClear = true,
                            cssClass = "w-100"
                        })
                    </div>
                    <div class="col-md-2 text-end">
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="button" class="btn btn-sm btn-primary" id="applyFilters">
                                <i class="fas fa-search me-1"></i> Apply
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="clearFilters">
                                <i class="fas fa-times me-1"></i> Clear
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sessions Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover" id="sessionsTable">
                            <thead>
                                <tr>
                                    <th>Session Code</th>
                                    <th>Title</th>
                                    <th>Group</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Expires</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model)
                                {
                                    <tr data-session-id="@session.Id" 
                                        data-group-id="@(session.GroupId?.ToString() ?? "")" 
                                        data-search-text="@($"{session.Code} {session.Title} {session.Goal ?? ""}").ToLower()">
                                        <td>
                                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2">
                                                @session.Code
                                            </span>
                                        </td>
                                        <td>
                                            <strong>@session.Title</strong>
                                            @if (!string.IsNullOrEmpty(session.Goal))
                                            {
                                                <br /><small class="text-muted">@session.Goal</small>
                                            }
                                        </td>
                                        <td>
                                            @if (session.GroupId.HasValue && sessionGroups != null)
                                            {
                                                var group = sessionGroups.FirstOrDefault(g => g.Id == session.GroupId.Value);
                                                if (group != null)
                                                {
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">
                                                        @group.Name
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">‚Äî</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (session.Status)
                                            {
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Live:
                                                    <span class="badge bg-success">Live</span>
                                                    break;
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Draft:
                                                    <span class="badge bg-warning text-dark">Draft</span>
                                                    break;
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Ended:
                                                    <span class="badge bg-secondary">Ended</span>
                                                    break;
                                                case TechWayFit.Pulse.Domain.Enums.SessionStatus.Expired:
                                                    <span class="badge bg-danger">Expired</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <small>@session.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </td>
                                        <td>
                                            <small class="text-muted">@session.ExpiresAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        </td>
                                        <td class="text-end">
                                            @if (session.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Live)
                                            {
                                                <a href="/facilitator/live?Code=@session.Code" class="btn btn-sm btn-success">
                                                    Go Live
                                                </a>
                                            }
                                            else if (session.Status == TechWayFit.Pulse.Domain.Enums.SessionStatus.Draft)
                                            {
                                                <a href="/facilitator/live?Code=@session.Code" class="btn btn-sm btn-primary">
                                                    Start Session
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="/facilitator/live?Code=@session.Code" class="btn btn-sm btn-outline-secondary">
                                                    View
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end mt-3">
                        <span class="badge bg-primary bg-opacity-10 text-primary" id="sessionCount">
                            @Model.Count @(Model.Count == 1 ? "session" : "sessions")
                        </span>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-muted" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </div>
                        <p class="text-muted mb-3">You haven't created any sessions yet</p>
                        <a href="@Url.Action("Create", "Facilitator")" class="btn btn-primary pulse-btn-primary">
                            Create Your First Session
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('sessionSearch');
            const groupFilter = document.getElementById('groupFilter');
            const applyBtn = document.getElementById('applyFilters');
            const clearBtn = document.getElementById('clearFilters');
            const sessionCount = document.getElementById('sessionCount');
            
            // Apply filters
            applyBtn.addEventListener('click', function() {
                applyFilters();
            });
            
            // Clear filters
            clearBtn.addEventListener('click', function() {
                searchInput.value = '';
                groupFilter.value = '';
                document.querySelector('[data-dropdown-id="groupFilter"] .dropdown-text').textContent = 'All Groups';
                applyFilters();
            });
            
            // Tree dropdown functionality
            initializeTreeDropdown();
            
            function applyFilters() {
                const searchText = searchInput.value.toLowerCase();
                const selectedGroupId = groupFilter.value;
                const rows = document.querySelectorAll('#sessionsTable tbody tr');
                let visibleCount = 0;
                
                rows.forEach(row => {
                    const rowSearchText = row.getAttribute('data-search-text');
                    const rowGroupId = row.getAttribute('data-group-id');
                    
                    let showRow = true;
                    
                    // Apply search filter
                    if (searchText && !rowSearchText.includes(searchText)) {
                        showRow = false;
                    }
                    
                    // Apply group filter
                    if (selectedGroupId && rowGroupId !== selectedGroupId) {
                        showRow = false;
                    }
                    
                    if (showRow) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });
                
                // Update count
                sessionCount.textContent = `${visibleCount} ${visibleCount === 1 ? 'session' : 'sessions'}`;
            }
            
            function initializeTreeDropdown() {
                // Handle tree toggle clicks first with capture phase
                document.addEventListener('click', function(e) {
                    // Tree toggle functionality - handle in capture phase to prevent dropdown from closing
                    if (e.target.closest('.tree-toggle')) {
                        const toggle = e.target.closest('.tree-toggle');
                        const targetId = toggle.getAttribute('data-target');
                        const target = document.getElementById(targetId);
                        const icon = toggle.querySelector('i');
                        
                        if (target) {
                            if (target.style.display === 'none' || target.style.display === '') {
                                target.style.display = 'block';
                                icon.className = 'fas fa-chevron-down';
                            } else {
                                target.style.display = 'none';
                                icon.className = 'fas fa-chevron-right';
                            }
                        }
                        
                        e.preventDefault();
                        e.stopPropagation();
                        e.stopImmediatePropagation();
                        return false;
                    }
                }, true); // Use capture phase
                
                // Handle tree item selection in normal phase
                document.addEventListener('click', function(e) {
                    // Only handle tree item selection if not clicking on toggle
                    if (e.target.closest('.tree-item') && !e.target.closest('.tree-toggle')) {
                        const treeItem = e.target.closest('.tree-item');
                        const value = treeItem.getAttribute('data-value');
                        const text = treeItem.querySelector('.tree-item-text').textContent;
                        const dropdown = treeItem.closest('.tree-dropdown');
                        const hiddenInput = dropdown.querySelector('input[type="hidden"]');
                        const dropdownText = dropdown.querySelector('.dropdown-text');
                        
                        // Update value
                        hiddenInput.value = value;
                        dropdownText.textContent = value ? text : 'All Groups';
                        
                        // Close dropdown only when selecting an item
                        const dropdownElement = new bootstrap.Dropdown(dropdown.querySelector('[data-bs-toggle="dropdown"]'));
                        dropdownElement.hide();
                        
                        // Remove selected class from all items
                        dropdown.querySelectorAll('.tree-item').forEach(item => {
                            item.classList.remove('selected');
                        });
                        
                        // Add selected class to clicked item
                        if (value) {
                            treeItem.classList.add('selected');
                        }
                        
                        e.preventDefault();
                        e.stopPropagation();
                    }
                });
            }
        });
    </script>
}

@section Styles {
    <style>
        .tree-dropdown .dropdown-menu {
            max-height: 300px;
            overflow-y: auto;
            z-index: 1050;
        }
        
        .tree-item {
            cursor: pointer;
            border: none;
            background: none;
            padding: 0.5rem 1rem;
        }
        
        .tree-item:hover {
            background-color: #f8f9fa;
        }
        
        .tree-item.selected {
            background-color: #e7f3ff;
            color: #0066cc;
        }
        
        .tree-toggle {
            cursor: pointer;
            padding: 2px;
            border-radius: 3px;
            min-width: 24px;
            height: 24px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .tree-toggle:hover {
            background-color: #e9ecef !important;
        }
        
        .tree-toggle:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
        
        .tree-children {
            margin-left: 1rem;
        }
        
        .tree-spacer {
            display: inline-block;
        }
        
        #sessionsTable tbody tr {
            transition: opacity 0.2s ease;
        }
    </style>
}
