@model TechWayFit.Pulse.Web.Models.GroupWithSessionsViewModel

@{
    var levelColor = Model.Group.Level switch
    {
        1 => "success",
        2 => "warning",
        3 => "danger",
        _ => "primary"
    };
    var levelLabel = Model.Group.Level == 1 ? "Track" : $"Level {Model.Group.Level}";
    
    // Get all groups from ViewData to find children
    var allGroups = ViewData["AllGroups"] as IReadOnlyCollection<TechWayFit.Pulse.Web.Models.GroupWithSessionsViewModel>;
    var childGroups = allGroups?.Where(g => g.Group.ParentGroupId == Model.Group.Id).OrderBy(g => g.Group.Name).ToList() ?? new List<TechWayFit.Pulse.Web.Models.GroupWithSessionsViewModel>();
}

<div class="card border shadow-sm mb-2" data-group-id="@Model.Group.Id">
    @* Header with expand/collapse *@
    <div class="card-header p-2 cursor-pointer user-select-none" onclick="toggleGroupExpand('@Model.Group.Id')">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2 flex-grow-1">
                @* Expand/Collapse Icon *@
                <span class="expand-icon fs-7 text-muted" id="expand-icon-@Model.Group.Id">
                    ‚ñ∂
                </span>
                
                @* Group Icon *@
                @if (!string.IsNullOrEmpty(Model.Group.Color))
                {
                    <span class="d-inline-flex align-items-center justify-content-center rounded px-2 py-1" style="font-size: 1.1rem; background: @Model.Group.Color;">@Model.Group.Icon</span>
                }
                else
                {
                    <span class="fs-5">@Model.Group.Icon</span>
                }
                
                @* Group Name and Badge *@
                <div class="flex-grow-1">
                    <h6 class="mb-0 fw-semibold text-dark" style="font-size: 0.9rem;">@Model.Group.Name</h6>
                    
                    @if (!string.IsNullOrEmpty(Model.Group.Description))
                    {
                        <p class="text-muted mb-0 fs-7 mt-1">@Model.Group.Description</p>
                    }
                </div>
                
                @* Level Badge and Session Count - Right aligned *@
                <div class="d-flex align-items-center gap-2 ms-auto me-2">
                    @if (!string.IsNullOrEmpty(Model.Group.Color))
                    {
                        <span class="badge fs-8 px-2 py-1 text-white" style="background-color: @Model.Group.Color;">@levelLabel</span>
                    }
                    else
                    {
                        <span class="badge bg-@levelColor fs-8 px-2 py-1">@levelLabel</span>
                    }
                    @if (Model.TotalSessionCount > 0)
                    {
                        <span class="badge bg-secondary fs-8 px-2 py-1 text-nowrap">@Model.TotalSessionCount @(Model.TotalSessionCount == 1 ? "session" : "sessions")</span>
                    }
                </div>
            </div>
            
            @* Actions Menu *@
            <div class="dropdown" onclick="event.stopPropagation()">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle fs-7 px-2 py-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    ‚Ä¢‚Ä¢‚Ä¢
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="javascript:void(0)" onclick="editGroup('@Model.Group.Id.ToString()', '@(Model.Group.Name.Replace("'", "\\'"))', '@((Model.Group.Description ?? "").Replace("'", "\\'"))', '@Model.Group.Icon', '@(Model.Group.Color ?? "")')">
                            ‚úèÔ∏è Edit
                        </a>
                    </li>
                    @if (Model.Group.Level < 3)
                    {
                        <li>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="createSubGroup('@Model.Group.Id', @Model.Group.Level)">
                                üìÅ Add Sub Group
                            </a>
                        </li>
                    }
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="deleteGroup('@Model.Group.Id.ToString()', '@(Model.Group.Name.Replace("'", "\\'"))')">
                            üóëÔ∏è Delete
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    @* Expandable Content *@
    <div class="collapse" id="content-@Model.Group.Id">
        <div class="card-body p-2 pt-2">
            @* Sessions List *@
            @if (Model.Sessions.Any())
            {
                <div class="mb-2">
                    <div class="sessions-list pe-2">
                        @foreach (var session in Model.Sessions)
                        {
                            <div class="session-item bg-light rounded p-2 mb-1">
                                <div class="d-flex align-items-start gap-2">
                                    <span class="mt-1 lh-1">
                                        @if (session.IsCompleted)
                                        {
                                            <text>‚úÖ</text>
                                        }
                                        else if (session.IsActive)
                                        {
                                            <text>‚è±Ô∏è</text>
                                        }
                                        else
                                        {
                                            <text>üìÖ</text>
                                        }
                                    </span>
                                    <div class="flex-grow-1" style="min-width: 0;">
                                        <a href="/facilitator/live?Code=@session.SessionCode" class="text-decoration-none fw-medium d-block text-truncate text-dark" style="font-size: 0.8rem;">
                                            @session.Title
                                        </a>
                                        @if (session.SessionStart.HasValue)
                                        {
                                            <small class="text-muted d-block fs-7 mt-1">
                                                üìÖ @session.SessionStart.Value.ToString("MMM dd, HH:mm")@(session.SessionEnd.HasValue ? $" - {session.SessionEnd.Value:HH:mm}" : "")
                                            </small>
                                        }
                                    </div>
                                    <div class="text-end">
                                            <span class="badge text-bg-info">@session.SessionCode</span>
                                            </div>
                                    <div class="text-muted text-end fs-7 text-nowrap">
                                        <div class="session-status-@session.Status.ToLower()">@session.Status</div>
                                        <div>Expires @session.ExpiresAt.ToString("MMM d")</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            
            @* Contextual Action Buttons *@
            <div class="d-flex gap-2 mt-3">
                @if (Model.Group.Level < 3)
                {
                    <button class="btn btn-outline-primary btn-sm fw-medium" onclick="createSubGroup('@Model.Group.Id', @Model.Group.Level)">
                        + Add @(Model.Group.Level == 1 ? "Level 2" : "Level 3") Group
                    </button>
                }
                <a href="/facilitator/create-session?groupId=@Model.Group.Id" class="btn btn-outline-success btn-sm fw-medium">
                    + Add Session
                </a>
            </div>
            
            @* Child Groups (Recursive) *@
            @if (childGroups.Any())
            {
                <div class="child-groups ps-3 mt-2">
                    @foreach (var childGroup in childGroups)
                    {
                        @await Html.PartialAsync("_GroupCard", childGroup)
                    }
                </div>
            }
        </div>
    </div>
</div>

<script>
    function createSubGroup(parentId, parentLevel) {
        event.preventDefault();
        const modal = document.getElementById('createGroupModal');
        const levelSelect = document.getElementById('groupLevel');
        const parentSelect = document.getElementById('parentGroup');
        const createModalLabel = document.getElementById('createGroupModalLabel');
        
        // Calculate the new level (parent level + 1)
        const newLevel = parentLevel + 1;
        
        // Update modal title to indicate it's for sub-group creation
        createModalLabel.textContent = `Create Level ${newLevel} Sub Group`;
        
        // Set level and disable the field since it's auto-calculated
        levelSelect.value = newLevel;
        levelSelect.disabled = true;
        
        // Show parent group container and set parent
        const parentContainer = document.getElementById('parentGroupContainer');
        parentContainer.style.display = 'block';
        parentSelect.required = true;
        parentSelect.value = parentId;
        parentSelect.disabled = true; // Disable since parent is pre-selected
        
        // Filter and show only valid parent options
        const options = parentSelect.querySelectorAll('option[data-level]');
        options.forEach(option => {
            const optionLevel = parseInt(option.getAttribute('data-level'));
            option.style.display = optionLevel < newLevel ? 'block' : 'none';
        });
        
        new bootstrap.Modal(modal).show();
        return false;
    }
</script>