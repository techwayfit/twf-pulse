@model dynamic

@{
    var group = Model.Group as TechWayFit.Pulse.Domain.Entities.SessionGroup;
    var allGroups = Model.AllGroups as List<TechWayFit.Pulse.Domain.Entities.SessionGroup>;
    var subGroups = allGroups.Where(g => g.ParentGroupId == group.Id).ToList();
}

<div class="tree-node mb-2" data-group-id="@group.Id">
    <div class="card border">
        <div class="card-body p-3">
            <!-- Group Header -->
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <!-- Expand/Collapse Toggle -->
                    <button class="btn btn-sm btn-outline-secondary tree-toggle" type="button" 
                            onclick="toggleGroup('@group.Id')" 
                            data-expanded="false">
                        <i class="fas fa-chevron-right" id="toggle-icon-@group.Id"></i>
                    </button>
                    
                    <!-- Group Info -->
                    <div>
                        <strong>
                            <i class="ics @group.Icon ic-sm"></i> @group.Name
                        </strong>
                        <span class="badge bg-primary bg-opacity-10 text-primary ms-2">Level @group.Level</span>
                    </div>
                </div>
                
                <!-- Actions -->
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Groups", "Facilitator")" class="btn btn-sm btn-outline-primary">
                        Manage
                    </a>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(group.Description))
            {
                <p class="text-muted small mt-2 mb-0">@group.Description</p>
            }
        </div>
    </div>
    
    <!-- Sessions Container (initially hidden) -->
    <div class="sessions-container ms-4 mt-2" id="sessions-@group.Id" style="display: none;">
        <div class="loading-placeholder text-center py-3">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
                <span class="visually-hidden">Loading sessions...</span>
            </div>
            <span class="ms-2 text-muted">Loading sessions...</span>
        </div>
    </div>
    
    <!-- Sub-groups Container -->
    @if (subGroups.Any())
    {
        <div class="subgroups-container ms-4 mt-2">
            @foreach (var subGroup in subGroups)
            {
                @await Html.PartialAsync("_SessionGroupNode", new { Group = subGroup, AllGroups = allGroups })
            }
        </div>
    }
</div>