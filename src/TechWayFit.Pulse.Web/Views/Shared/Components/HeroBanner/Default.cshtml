@model TechWayFit.Pulse.Web.Models.PromotionalComponents.HeroBannerViewModel

<section class="promo-hero-banner">
    <div class="promo-hero-content">
        @if (!string.IsNullOrWhiteSpace(Model.BadgeText))
        {
            <span class="promo-hero-badge">@Model.BadgeText</span>
        }

        <h1 class="promo-hero-title">@Model.Title</h1>
        <p class="promo-hero-description">@Model.Description</p>

        <div class="promo-hero-actions">
            <a href="@Model.PrimaryActionUrl" class="promo-btn-light">
                @Model.PrimaryActionText
                <svg class="promo-arrow-icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                    <path d="M8 0L6.59 1.41L12.17 7H0V9H12.17L6.59 14.59L8 16L16 8L8 0Z" />
                </svg>
            </a>

            @if (!string.IsNullOrWhiteSpace(Model.SecondaryActionText))
            {
                <a href="@Model.SecondaryActionUrl" class="promo-btn-outline-light">@Model.SecondaryActionText</a>
            }
        </div>
    </div>
</section>
