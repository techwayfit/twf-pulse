@model TechWayFit.Pulse.Web.Models.PromotionalComponents.FeatureHighlightsViewModel

<section class="promo-feature-grid">
    @foreach (var feature in Model.Items)
    {
        <article class="promo-feature-card">
            <div class="promo-feature-icon">
                @if (feature.Icon.EndsWith(".svg"))
                {
                    var iconName = feature.Icon.Replace(".svg", "");
                    <i class="ics ics-@iconName ic-xl"></i>
                }
                else
                {
                    @feature.Icon
                }
            </div>
            <h3 class="promo-feature-title">@feature.Title</h3>
            <p class="promo-feature-description">@feature.Description</p>
            <a href="@feature.LinkUrl" class="promo-feature-link">
                @feature.LinkText
                <svg class="promo-arrow-icon" width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
                    <path d="M8 0L6.59 1.41L12.17 7H0V9H12.17L6.59 14.59L8 16L16 8L8 0Z" />
                </svg>
            </a>
        </article>
    }
</section>
