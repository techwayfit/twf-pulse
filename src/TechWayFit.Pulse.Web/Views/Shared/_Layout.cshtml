<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "TechWayFit Pulse")</title>
    <base href="~/" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Brand CSS (minimal custom styles) -->
    <link rel="stylesheet" href="~/css/brand.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />

    <!-- Page-specific styles -->
    @await RenderSectionAsync("Styles", required: false)
    
</head>
<body class="pulse-body">
    <!-- Navigation Header - Full Width Background -->
    <header class="sticky-top border-bottom bg-white bg-opacity-75" style="backdrop-filter: blur(10px);">
        <!-- Constrained Content -->
        <div class="container" style="max-width: 1200px;">
            <div class="d-flex align-items-center justify-content-between py-3 gap-3 flex-wrap">
                <!-- Brand -->
                <div class="d-flex align-items-center gap-2 flex-shrink-1">
                    <div class="pulse-logo"></div>
                    <div class="lh-sm">
                        <div class="fw-semibold">TechWayFit Pulse</div>
                        <div class="text-muted small d-none d-md-block">Make workshops fun. Make insights measurable.</div>
                    </div>
                </div>

                <!-- Navigation Buttons -->
                <nav class="d-flex gap-2 flex-shrink-0">
                    <a class="btn btn-outline-secondary btn-sm" href="/">Home</a>
                    <a class="btn btn-outline-secondary btn-sm" href="/facilitator/create">Create Session</a>
                    <a class="btn btn-primary btn-sm pulse-btn-primary" href="/participant/join">Join Workshop</a>
                </nav>
            </div>
        </div>
    </header>

    @RenderBody()

    <!-- Footer - Full Width Background -->
    <footer class="border-top mt-5 py-4 bg-white">
        <!-- Constrained Content -->
        <div class="container" style="max-width: 1200px;">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <p class="mb-0 text-muted small">&copy; @DateTime.Now.Year TechWayFit Pulse. All rights reserved.</p>
                <div class="d-flex gap-3">
                    <a href="#" class="text-muted text-decoration-none small">Privacy</a>
                    <a href="#" class="text-muted text-decoration-none small">Terms</a>
                    <a href="#" class="text-muted text-decoration-none small">Support</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Blazor Error UI (for Blazor pages only) -->
    <div id="blazor-error-ui" style="display: none; position: fixed; bottom: 0; left: 0; right: 0; background: lightyellow; color: black; padding: 10px; text-align: center; z-index: 9999;">
        An unhandled error has occurred.
        <a href="" class="reload" style="margin-left: 10px;">Reload</a>
        <a class="dismiss" style="margin-left: 10px; cursor: pointer;">🗙</a>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- QR Code Libraries - MUST load before blazor.server.js -->
    <script src="js/qrcodegen.js"></script>
    <script src="js/qrcode.js"></script>

    <!-- Page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
