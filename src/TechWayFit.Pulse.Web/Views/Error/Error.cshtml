@{
    Layout = null; // Don't use the main layout
    var statusCode = ViewData["StatusCode"] as int? ?? 500;
    var errorTitle = ViewData["ErrorTitle"] as string ?? "Error";
    var errorMessage = ViewData["ErrorMessage"] as string ?? "An error occurred while processing your request.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@errorTitle â€” TechWayFit Pulse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-container {
            text-align: center;
            padding: 3rem 2rem;
            max-width: 600px;
        }
        .error-code {
            font-size: 8rem;
            font-weight: 800;
            color: rgba(255, 255, 255, 0.9);
            line-height: 1;
            margin-bottom: 1rem;
        }
        .error-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-code">@statusCode</div>
        <div class="error-card">
            <h1 class="mb-3">@errorTitle</h1>
            <p class="text-muted mb-4">@errorMessage</p>
            <div class="d-flex gap-2 justify-content-center">
                <a href="/facilitator/dashboard" class="btn btn-primary">Go to Dashboard</a>
                <a href="/" class="btn btn-outline-secondary">Go Home</a>
            </div>
        </div>
    </div>
</body>
</html>
