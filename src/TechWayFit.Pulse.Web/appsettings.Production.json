{
  "Pulse": {
    "UseInMemory": false
  },
  "ActivityDefaults": {
    "Poll": {
      "MaxResponsesPerParticipant": 1
    },
    "Rating": {
      "MaxResponsesPerParticipant": 1
    },
    "WordCloud": {
      "MaxSubmissionsPerParticipant": 3
    },
    "GeneralFeedback": {
      "MaxResponsesPerParticipant": 5
    }
  },
  "DataProtection": {
    "StorageType": "FileSystem",
    "KeysPath": "/mnt/shared-keys"
  },
  "Email": {
    "Provider": "Smtp"
  },
  "Smtp": {
    "Host": "smtp.sendgrid.net",
    "Port": 587,
    "EnableSsl": true,
    "Username": "apikey",
    "Password": "",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "TechWayFit Pulse"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "TechWayFit.Pulse": "Information"
    }
  },
  "AllowedHosts": "*"
}
