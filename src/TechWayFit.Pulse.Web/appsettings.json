{
  "ConnectionStrings": {
    "PulseDb": "Data Source=pulse.db"
  },
  "Pulse": {
    "UseInMemory": true
  },
  "ActivityDefaults": {
    "Poll": {
      "MaxResponsesPerParticipant": 1
    },
    "Rating": {
      "MaxResponsesPerParticipant": 1
    },
    "WordCloud": {
      "MaxSubmissionsPerParticipant": 3
    },
    "GeneralFeedback": {
      "MaxResponsesPerParticipant": 5
    }
  },
  "ContextDocumentLimits": {
    "SprintBacklogSummaryMaxChars": 1000,
    "IncidentSummaryMaxChars": 1000,
    "ProductSummaryMaxChars": 5000
  },
  "DataProtection": {
    "StorageType": "FileSystem",
    "KeysPath": null
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@techway.fit",
    "FromName": "TechWayFit Pulse"
  },
  "Email": {
    "Provider": "Console"
  },
  "EmailTemplates": {
    "BasePath": null
  },
  "App": {
    "DashboardUrl": "https://pulse.techway.fit/facilitator/dashboard"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.DataProtection": "Debug",
      "Microsoft.AspNetCore.Antiforgery": "Debug",
      "Microsoft.AspNetCore.Components.Server": "Debug",
      "TechWayFit.Pulse.Web.Services.CustomFileSystemXmlRepository": "Debug",
      "TechWayFit.Pulse.Web.Services.DataProtectionDiagnostics": "Debug",
      "TechWayFit.Pulse.Web.Services.DataProtectionKeyManager": "Information",
      "TechWayFit.Pulse.Web.Services.LoggingDataProtectionProvider": "Information",
      "TechWayFit.Pulse.Web.Middleware.DataProtectionLoggingMiddleware": "Debug"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "App_Data/logs/pulse-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",
  "AI": {
    "Enabled": false,
    "OpenAI": {
      "Endpoint": "",
      "ApiKey": "",
      "Model": "gpt-4o-mini",
      "TimeoutSeconds": 60,
      "MaxTokens": 512,
      "UseAzure": false
    }
  }
}
