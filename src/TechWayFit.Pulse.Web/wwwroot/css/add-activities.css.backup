/* Add Activities Page Styles */

.nav-tabs .nav-link {
    border: none;
    color: #6c757d;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.nav-tabs .nav-link:hover {
    color: #0d6efd;
    border-color: transparent;
}

.nav-tabs .nav-link.active {
    color: #0d6efd;
    background: transparent;
    border-bottom: 3px solid #0d6efd;
    font-weight: 600;
}

/* Activity Cards */
.activity-card {
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 0.75rem;
    display: flex;
    align-items-center;
    gap: 1rem;
    transition: all 0.2s ease;
}

.activity-card:hover {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}

.activity-card .activity-icon {
    font-size: 2rem;
    flex-shrink: 0;
}

.activity-card .activity-details {
    flex-grow: 1;
}

.activity-card .activity-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.activity-card .activity-prompt {
    color: #6c757d;
    font-size: 0.875rem;
}

.activity-card .activity-actions {
    display: flex;
    gap: 0.5rem;
}

/* Template Grid */
.template-card {
    cursor: pointer;
    transition: all 0.3s ease;
    height: 100%;
}

.template-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
}

.template-card .template-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.template-card .template-name {
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.template-card .template-description {
    color: #6c757d;
    font-size: 0.875rem;
}

.template-card .template-activity-count {
    font-size: 0.75rem;
    color: #6c757d;
    margin-top: 0.5rem;
}

/* Loading States */
.btn-loading {
    pointer-events: none;
}

/* Badge Styling */
#activityCountBadge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: #f8f9fa;
    border-radius: 20px;
}

/* Tom Select Customizations */
.ts-wrapper {
    width: 100%;
}

.ts-wrapper.multi .ts-control {
    min-height: 38px;
    padding: 0.375rem 0.75rem;
    border-color: #dee2e6;
    background-color: #fff;
}

.ts-wrapper.multi .ts-control > div {
    background-color: #0d6efd;
    color: #fff;
    border: none;
    padding: 0.25rem 0.5rem;
    margin: 0.125rem;
    border-radius: 0.25rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
}

.ts-wrapper.multi .ts-control > div .remove {
    border-left: 1px solid rgba(255, 255, 255, 0.3);
    padding-left: 0.5rem;
    margin-left: 0.25rem;
}

.ts-wrapper.focus .ts-control {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.ts-wrapper .ts-control input {
    font-size: 1rem;
}

.ts-dropdown {
    max-height: 300px !important;
    overflow-y: auto !important;
    border: 1px solid #dee2e6;
    border-top: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1050;
}

.ts-dropdown .optgroup-header {
    font-weight: 600;
    font-size: 0.875rem;
    color: #495057;
    background: #f8f9fa;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid #dee2e6;
    margin-top: 0;
}

.ts-dropdown .optgroup:first-child .optgroup-header {
    margin-top: 0;
}

.ts-dropdown .option {
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    transition: background-color 0.15s ease;
}

.ts-dropdown .option:hover {
    background-color: #f8f9fa;
}

.ts-dropdown .option.active {
    background-color: #0d6efd;
    color: #fff;
}

.ts-dropdown .option.selected {
    display: none; /* Hide already selected items */
}

.ts-dropdown .no-results {
    padding: 1rem;
    text-align: center;
    color: #6c757d;
    font-style: italic;
}

.ts-wrapper.plugin-dropdown_input .ts-control {
    cursor: text;
}

.ts-wrapper.plugin-dropdown_input.dropdown-active .ts-control {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}

.ts-dropdown-content {
    max-height: 280px;
    overflow-y: auto;
}

/* Remove button plugin styling */
.ts-wrapper.plugin-remove_button .ts-control > div .remove {
    border: none;
    padding: 0;
    margin: 0 0 0 0.25rem;
    text-decoration: none;
    vertical-align: middle;
    display: inline-block;
    cursor: pointer;
}

.ts-wrapper.plugin-remove_button .ts-control > div .remove:hover {
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
}

/* Activity Card Buttons */
.pulse-btn-edit {
    background: #f3f4f6 !important;
    color: #6366f1 !important;
    border: none !important;
    padding: 0.5rem 1rem !important;
    border-radius: 8px !important;
    font-weight: 600 !important;
    transition: all 0.3s ease !important;
}

.pulse-btn-edit:hover {
    background: #e5e7eb !important;
    color: #4f46e5 !important;
}

.pulse-btn-remove {
    background: #fee2e2 !important;
    color: #dc2626 !important;
    border: none !important;
    padding: 0.5rem 1rem !important;
    border-radius: 8px !important;
    font-weight: 600 !important;
    transition: all 0.3s ease !important;
}

.pulse-btn-remove:hover {
    background: #fecaca !important;
    color: #b91c1c !important;
}

/* Responsive */
@media (max-width: 768px) {
    .nav-tabs .nav-link {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }
    
    .activity-card {
        flex-direction: column;
        align-items: flex-start;
    }
}
