@model TechWayFit.Pulse.BackOffice.Core.Models.Sessions.SessionDetailViewModel
@using TechWayFit.Pulse.Domain.Enums
@{
    ViewBag.Title = $"Session — {Model.Code}";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0 fw-semibold">
        <i class="fa-solid fa-calendar-check me-2 text-success"></i>@Model.Code — @Model.Title
    </h1>
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="fa-solid fa-arrow-left me-1"></i>Back
    </a>
</div>

@* ── Session details ───────────────────────────────────────────────────────── *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-transparent border-bottom fw-semibold">Session Details</div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9"><code class="small">@Model.Id</code></dd>
            <dt class="col-sm-3">Code</dt>
            <dd class="col-sm-9"><code>@Model.Code</code></dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-primary">@Model.Status</span>
                @if (Model.IsAdminLocked) { <span class="badge bg-danger ms-1">Admin Locked</span> }
            </dd>
            <dt class="col-sm-3">Owner</dt>
            <dd class="col-sm-9">@Model.OwnerEmail</dd>
            <dt class="col-sm-3">Participants</dt>
            <dd class="col-sm-9">@Model.ParticipantCount</dd>
            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm") UTC</dd>
            <dt class="col-sm-3">Expires</dt>
            <dd class="col-sm-9">@Model.ExpiresAt.ToString("dd MMM yyyy HH:mm") UTC</dd>
            <dt class="col-sm-3">Goal</dt>
            <dd class="col-sm-9">@(Model.Goal ?? "—")</dd>
        </dl>
    </div>
</div>

@* ── Override panel ────────────────────────────────────────────────────────── *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-transparent border-bottom fw-semibold">
        <i class="fa-solid fa-pen-to-square me-2 text-warning"></i>Override Actions
        <small class="text-muted fw-normal ms-2">All changes are audited</small>
    </div>
    <div class="card-body">
        <div class="row g-3">

            @if (Model.Status == SessionStatus.Live)
            {
                <div class="col-md-4">
                    <form asp-action="ForceEnd" method="post" class="border rounded p-3"
                          onsubmit="return confirm('Force-end this live session?')">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <label class="form-label small fw-semibold">Force End Session</label>
                        <input type="text" name="reason" class="form-control form-control-sm mb-2"
                               placeholder="Reason (required)" required />
                        <button type="submit" class="btn btn-sm btn-warning w-100">Force End</button>
                    </form>
                </div>
            }

            <div class="col-md-4">
                <form asp-action="ExtendExpiry" method="post" class="border rounded p-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <label class="form-label small fw-semibold">Extend Expiry</label>
                    <div class="input-group input-group-sm mb-2">
                        <input type="number" name="additionalDays" class="form-control"
                               min="1" max="@(isSuperAdmin ? 365 : 30)" value="7" required />
                        <span class="input-group-text">days</span>
                    </div>
                    <input type="text" name="reason" class="form-control form-control-sm mb-2"
                           placeholder="Reason (required)" required />
                    <button type="submit" class="btn btn-sm btn-primary w-100">Extend</button>
                </form>
            </div>

            <div class="col-md-4">
                <form asp-action="SetLock" method="post" class="border rounded p-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="locked" value="@(!Model.IsAdminLocked)" />
                    <label class="form-label small fw-semibold">
                        @(Model.IsAdminLocked ? "Unlock Session" : "Lock Session (prevent facilitator edits)")
                    </label>
                    <input type="text" name="reason" class="form-control form-control-sm mb-2"
                           placeholder="Reason (required)" required />
                    <button type="submit"
                            class="btn btn-sm w-100 @(Model.IsAdminLocked ? "btn-success" : "btn-secondary")">
                        @(Model.IsAdminLocked ? "Unlock" : "Lock")
                    </button>
                </form>
            </div>

            @if (isSuperAdmin)
            {
                <div class="col-md-4">
                    <form asp-action="Delete" method="post" class="border border-danger rounded p-3"
                          onsubmit="return confirm('PERMANENTLY delete this session and all its data?')">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <label class="form-label small fw-semibold text-danger">
                            Delete Session <span class="badge bg-danger">SuperAdmin</span>
                        </label>
                        <input type="text" name="confirmationCode" class="form-control form-control-sm mb-2"
                               placeholder="Type session code: @Model.Code" required />
                        <input type="text" name="reason" class="form-control form-control-sm mb-2"
                               placeholder="Reason (required)" required />
                        <button type="submit" class="btn btn-sm btn-danger w-100">
                            <i class="fa-solid fa-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@* ── Activities ────────────────────────────────────────────────────────────── *@
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-bottom fw-semibold">Activities (@Model.Activities.Count)</div>
    <table class="table table-sm align-middle mb-0">
        <thead class="table-light">
            <tr><th>#</th><th>Type</th><th>Status</th><th>Opened</th><th>Closed</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Activities)
            {
                <tr>
                    <td>@a.Order</td>
                    <td>@a.Type</td>
                    <td>@a.Status</td>
                    <td><small class="text-muted">@(a.OpenedAt?.ToString("HH:mm") ?? "—")</small></td>
                    <td><small class="text-muted">@(a.ClosedAt?.ToString("HH:mm") ?? "—")</small></td>
                    <td>
                        @if (a.Status == "Open")
                        {
                            <form asp-action="ForceCloseActivity" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="activityId" value="@a.Id" />
                                <input type="hidden" name="sessionId" value="@Model.Id" />
                                <input type="text" name="reason" class="form-control form-control-sm d-inline w-auto me-1"
                                       placeholder="Reason" required style="width:120px!important" />
                                <button type="submit" class="btn btn-xs btn-sm btn-warning">Force Close</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
