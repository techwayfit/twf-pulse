@model TechWayFit.Pulse.BackOffice.Core.Models.Audit.AuditLogEntry
@{
    ViewBag.Title = "Audit Record";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0 fw-semibold">
        <i class="fa-solid fa-scroll me-2 text-warning"></i>Audit Record
    </h1>
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="fa-solid fa-arrow-left me-1"></i>Back
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9"><code>@Model.Id</code></dd>
            <dt class="col-sm-3">Occurred</dt>
            <dd class="col-sm-9">@Model.OccurredAt.ToString("dd MMM yyyy HH:mm:ss") UTC</dd>
            <dt class="col-sm-3">Operator</dt>
            <dd class="col-sm-9"><code>@Model.OperatorId</code></dd>
            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.OperatorRole</dd>
            <dt class="col-sm-3">Action</dt>
            <dd class="col-sm-9"><strong>@Model.Action</strong></dd>
            <dt class="col-sm-3">Entity Type</dt>
            <dd class="col-sm-9">@Model.EntityType</dd>
            <dt class="col-sm-3">Entity ID</dt>
            <dd class="col-sm-9"><code>@Model.EntityId</code></dd>
            <dt class="col-sm-3">Field</dt>
            <dd class="col-sm-9">@(Model.FieldName ?? "—")</dd>
            <dt class="col-sm-3">Old Value</dt>
            <dd class="col-sm-9"><pre class="bg-light p-2 rounded small mb-0">@(Model.OldValue ?? "—")</pre></dd>
            <dt class="col-sm-3">New Value</dt>
            <dd class="col-sm-9"><pre class="bg-light p-2 rounded small mb-0">@(Model.NewValue ?? "—")</pre></dd>
            <dt class="col-sm-3">Reason</dt>
            <dd class="col-sm-9">@(Model.Reason ?? "—")</dd>
            <dt class="col-sm-3">IP Address</dt>
            <dd class="col-sm-9"><code>@Model.IpAddress</code></dd>
        </dl>
    </div>
</div>
