@model TechWayFit.Pulse.BackOffice.Core.Models.Users.UserSearchResult
@{
    ViewBag.Title = "Users";
    var query = ViewBag.Query as TechWayFit.Pulse.BackOffice.Core.Models.Users.UserSearchQuery;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0 fw-semibold">
        <i class="fa-solid fa-users me-2 text-primary"></i>Facilitator Users
    </h1>
    <span class="text-muted small">@Model.TotalCount result(s)</span>
</div>

<form method="get" class="card border-0 shadow-sm mb-4 p-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label small mb-1">Email contains</label>
            <input type="text" name="email" class="form-control form-control-sm" value="@query?.EmailContains" />
        </div>
        <div class="col-md-4">
            <label class="form-label small mb-1">Name contains</label>
            <input type="text" name="name" class="form-control form-control-sm" value="@query?.NameContains" />
        </div>
        <div class="col-md-2">
            <label class="form-label small mb-1">Status</label>
            <select name="disabled" class="form-select form-select-sm">
                <option value="">All</option>
                <option value="false" selected="@(query?.IsDisabled == false)">Active</option>
                <option value="true" selected="@(query?.IsDisabled == true)">Disabled</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary btn-sm w-100">
                <i class="fa-solid fa-magnifying-glass me-1"></i>Search
            </button>
        </div>
    </div>
</form>

<div class="card border-0 shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Email</th>
                    <th>Display Name</th>
                    <th>Status</th>
                    <th>Sessions</th>
                    <th>Created</th>
                    <th>Last Login</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Items)
                {
                    <tr>
                        <td><code>@user.Email</code></td>
                        <td>@user.DisplayName</td>
                        <td>
                            @if (user.IsDisabled)
                            {
                                <span class="badge bg-danger">Disabled</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>@user.SessionCount</td>
                        <td><small class="text-muted">@user.CreatedAt.ToString("dd MMM yyyy")</small></td>
                        <td><small class="text-muted">@(user.LastLoginAt?.ToString("dd MMM yyyy") ?? "â€”")</small></td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.TotalCount > Model.PageSize)
{
    <nav class="mt-3">
        <ul class="pagination pagination-sm justify-content-center">
            @for (var p = 1; p <= (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize); p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-email="@query?.EmailContains"
                       asp-route-name="@query?.NameContains"
                       asp-route-page="@p">@p</a>
                </li>
            }
        </ul>
    </nav>
}
