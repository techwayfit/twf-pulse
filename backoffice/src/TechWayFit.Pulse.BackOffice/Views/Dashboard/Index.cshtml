@{
    ViewBag.Title = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-semibold">
        <i class="fa-solid fa-gauge me-2 text-primary"></i>Operations Dashboard
    </h1>
    <small class="text-muted">@DateTimeOffset.UtcNow.ToString("dd MMM yyyy HH:mm") UTC</small>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="bo-stat-icon bg-primary-subtle rounded-3 p-3">
                    <i class="fa-solid fa-users fa-lg text-primary"></i>
                </div>
                <div>
                    <div class="fs-4 fw-bold">@ViewBag.UserCount</div>
                    <div class="text-muted small">Facilitator Accounts</div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary w-100">
                    Manage Users
                </a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="bo-stat-icon bg-success-subtle rounded-3 p-3">
                    <i class="fa-solid fa-calendar-check fa-lg text-success"></i>
                </div>
                <div>
                    <div class="fs-4 fw-bold">@ViewBag.SessionCount</div>
                    <div class="text-muted small">Total Sessions</div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <a asp-controller="Sessions" asp-action="Index" class="btn btn-sm btn-outline-success w-100">
                    Browse Sessions
                </a>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="bo-stat-icon bg-info-subtle rounded-3 p-3">
                    <i class="fa-solid fa-person-chalkboard fa-lg text-info"></i>
                </div>
                <div>
                    <div class="fs-4 fw-bold">@ViewBag.ParticipantCount</div>
                    <div class="text-muted small">Total Participants</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="bo-stat-icon bg-warning-subtle rounded-3 p-3">
                    <i class="fa-solid fa-scroll fa-lg text-warning"></i>
                </div>
                <div>
                    <div class="fs-4 fw-bold">@ViewBag.AuditLogCount</div>
                    <div class="text-muted small">Audit Records</div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <a asp-controller="Audit" asp-action="Index" class="btn btn-sm btn-outline-warning w-100">
                    View Audit Log
                </a>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-warning d-flex gap-2 align-items-start" role="alert">
    <i class="fa-solid fa-triangle-exclamation mt-1"></i>
    <div>
        <strong>All actions in this portal are audited.</strong>
        Every change you make is permanently recorded with your username, IP address, and the reason provided.
    </div>
</div>
